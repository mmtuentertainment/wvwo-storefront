---
/**
 * SPEC-19: Structure Cards Skeleton Screen
 * Maintains riveted-border aesthetic during loading
 */
---

<div class="grid grid-cols-1 md:grid-cols-[3fr_2fr_4fr] gap-x-6 gap-y-8" role="status" aria-label="Loading preserved structures">
  {[1, 2, 3, 4, 5, 6].map(() => (
    <div class="riveted-border bg-brand-cream p-6 rounded-sm">
      <!-- Image skeleton -->
      <div class="relative mb-4 bg-coal-gray/10 rounded-sm skeleton-shimmer" style="aspect-ratio: 4/3;"></div>

      <!-- Building name -->
      <div class="h-6 bg-coal-gray/20 w-3/4 rounded-sm mb-2 skeleton-shimmer"></div>

      <!-- Year built -->
      <div class="h-4 bg-coal-gray/15 w-24 rounded-sm mb-3 skeleton-shimmer"></div>

      <!-- Description (3 lines) -->
      <div class="space-y-2 mb-4">
        <div class="h-3 bg-coal-gray/10 w-full rounded-sm skeleton-shimmer"></div>
        <div class="h-3 bg-coal-gray/10 w-full rounded-sm skeleton-shimmer"></div>
        <div class="h-3 bg-coal-gray/10 w-2/3 rounded-sm skeleton-shimmer"></div>
      </div>

      <!-- Condition badge -->
      <div class="h-6 bg-coal-gray/15 w-20 rounded-sm skeleton-shimmer"></div>
    </div>
  ))}
</div>
