---
/**
 * SPEC-20: Guided Trips Section
 * WVWO aesthetic: brand-orange left border, sign-green pricing, rounded-sm only
 */

interface Props {
  guidedTrips: {
    name: string;
    category: string;
    difficulty: string;
    duration: string;
    groupSize: string;
    includes: string[];
    pricing: { type: string; price: string }[];
    minAge?: number;
    seasonalNotes?: string;
  }[];
}

const { guidedTrips } = Astro.props;

// Don't render if empty
if (!guidedTrips || guidedTrips.length === 0) return null;
---

<section class="py-16 bg-brand-cream" id="guided-trips">
  <div class="container mx-auto px-4">
    <h2 class="font-display text-3xl md:text-4xl font-bold text-brand-brown mb-12">
      Guided Adventures
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      {guidedTrips.map((trip) => (
        <div class="bg-white border-l-4 border-l-brand-orange p-6 rounded-sm">
          <!-- Trip Name -->
          <h3 class="font-display text-2xl font-bold text-brand-brown mb-3">
            {trip.name}
          </h3>

          <!-- Badges -->
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="bg-brand-orange text-white px-3 py-1 rounded-sm text-sm font-bold">
              {trip.category}
            </span>
            <span class="bg-brand-cream text-brand-brown px-3 py-1 rounded-sm text-sm">
              {trip.difficulty}
            </span>
          </div>

          <!-- Duration & Group Size -->
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
              <p class="font-body text-xs text-brand-mud/80">Duration</p>
              <p class="font-body font-bold text-brand-brown">{trip.duration}</p>
            </div>
            <div>
              <p class="font-body text-xs text-brand-mud/80">Group Size</p>
              <p class="font-body font-bold text-brand-brown">{trip.groupSize}</p>
            </div>
          </div>

          <!-- Includes List -->
          <div class="mb-4">
            <p class="font-body text-sm font-bold text-brand-brown mb-2">Includes:</p>
            <ul class="space-y-1">
              {trip.includes.map((item) => (
                <li class="font-body text-sm text-brand-mud flex items-start gap-2">
                  <span class="text-sign-green mt-1" aria-hidden="true">âœ“</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Pricing Table -->
          <div class="pt-4 border-t border-brand-mud/20">
            <p class="font-body text-sm font-bold text-brand-brown mb-2">Pricing:</p>
            <div class="space-y-1">
              {trip.pricing.map((price) => (
                <div class="flex items-center justify-between">
                  <span class="font-body text-sm text-brand-mud">{price.type}</span>
                  <span class="font-display font-bold text-sign-green">{price.price}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Min Age & Seasonal Notes -->
          {(trip.minAge || trip.seasonalNotes) && (
            <div class="font-body text-xs text-brand-mud/80 mt-4 space-y-1">
              {trip.minAge && <p>Minimum age: {trip.minAge}+</p>}
              {trip.seasonalNotes && <p class="italic">{trip.seasonalNotes}</p>}
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
