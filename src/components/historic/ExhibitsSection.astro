---
/**
 * SPEC-19: Exhibits Section
 * Museum card styling with aged paper backgrounds
 */
import type { HistoricTemplateProps } from '../../types/templates/historic';

interface Props {
  exhibits?: HistoricTemplateProps['exhibits'];
}

const { exhibits } = Astro.props;

// Don't render section if no exhibits
if (!exhibits || exhibits.length === 0) return null;
---

<section class="py-16 aged-section" id="exhibits">
  <div class="container mx-auto px-4">
    <h2 class="font-display text-4xl md:text-5xl font-black text-brand-brown mb-12 text-center">
      Current Exhibits
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      {exhibits.map((exhibit) => (
        <div class="bg-heritage-cream-alt border-l-4 border-heritage-burgundy p-8 rounded-sm lumber-border">
          <!-- Exhibit Title -->
          <h3 class="font-display text-2xl font-bold text-brand-brown mb-2">
            {exhibit.title}
          </h3>

          <!-- Location -->
          <p class="font-body text-sm text-sign-green font-semibold mb-4">
            {exhibit.location}
          </p>

          <!-- Interactive Badge (conditional) -->
          {exhibit.interactive && (
            <div class="inline-block mb-3 px-3 py-1 bg-brand-orange rounded-sm">
              <span class="font-body text-xs font-bold text-white">
                Interactive
              </span>
            </div>
          )}

          <!-- Description -->
          <p class="font-body text-brand-mud mb-4 leading-relaxed">
            {exhibit.description}
          </p>

          <!-- Featured Artifacts List (conditional) -->
          {exhibit.artifacts && exhibit.artifacts.length > 0 && (
            <div class="space-y-2">
              <p class="font-body text-sm font-bold text-brand-brown uppercase tracking-wide">
                Featured Artifacts:
              </p>
              <ul class="space-y-1">
                {exhibit.artifacts.map((artifact) => (
                  <li class="font-body text-sm text-brand-mud flex items-start gap-2">
                    <span class="text-heritage-burgundy" aria-hidden="true">â€¢</span>
                    <span>{artifact}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
