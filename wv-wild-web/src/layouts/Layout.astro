      "geo": { "@type": "GeoCoordinates", "latitude": 38.8423, "longitude": -80.6234 }
    }
  ],
  "knowsAbout": ["FFL transfers", "WV hunting licenses", "firearms", "ammunition", "I-79 corridor hunting supplies"],
  "paymentAccepted": "Cash, Credit Card, Debit Card",
  "currenciesAccepted": "USD",
  "makesOffer": [
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "FFL Transfer",
        "description": "Buy online? Ship to us. We handle the paperwork legally and quickly. $25 per transfer."
      },
      "price": "25.00",
      "priceCurrency": "USD"
    },
    {
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": "WV Hunting License",
        "description": "Get your hunting license here. We're an official WVDNR agent - we print them on-site."
