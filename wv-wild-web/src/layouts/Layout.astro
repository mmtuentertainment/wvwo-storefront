    "addressRegion": "WV",
    "postalCode": "26610",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 38.49910,
    "longitude": -80.75460
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "10:00",
      "closes": "17:00"
    }
  ],
  "priceRange": "$$",
  "image": "https://wvwildoutdoors.pages.dev/og-wvwo-storefront.png",  // TODO: Update when domain purchased
  "sameAs": [
    "https://www.facebook.com/profile.php?id=100063588635941",
    SITE_CONTACT.mapsUrl
  ],
  "contactPoint": {
    "@type": "ContactPoint",
