---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description ?? defaultDescription} />

		<!-- Open Graph tags -->
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={ogUrl} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:image:alt" content="WV Wild Outdoors hunting and outdoor shop in Birch River, WV" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={ogTitle} />
		<meta name="twitter:description" content={ogDescription} />
		<meta name="twitter:image" content={ogImage} />

		<!-- Canonical URL -->
		<link rel="canonical" href={ogUrl} />

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Schema.org LocalBusiness structured data -->
		<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

		<!-- Additional page-specific schemas (Product, Breadcrumb, etc.) -->
		{additionalSchemas.map(schema => (
			<script type="application/ld+json" set:html={JSON.stringify(schema)} />
		))}
	</head>
	<body class="bg-brand-cream text-brand-brown min-h-screen flex flex-col font-body bg-noise selection:bg-brand-brown selection:text-brand-cream">
		<slot />
		<StickyPhone />
	</body>
</html>
