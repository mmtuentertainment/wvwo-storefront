---
import '../styles/global.css';
import { SITE_CONTACT } from '../config/siteContact';
import StickyPhone from '../components/StickyPhone.astro';

interface Props {
	title: string;
    description?: string;
    additionalSchemas?: object[];
}

const {
  title,
  description,
  additionalSchemas = []
} = Astro.props;

const defaultDescription = "WV Wild Outdoors â€” family-run FFL dealer and hunting shop near I-79 Exit 57 in Birch River, WV. Firearms, ammo, hunting gear, and WV hunting licenses.";

const ogTitle = title;
const ogDescription = description ?? defaultDescription;

const defaultOgImage = "https://wvwildoutdoors.com/og-wvwo-storefront.png";

const ogImage = defaultOgImage;

// Canonical URL - use origin+pathname only (no query/hash)
const ogUrl = Astro.url ? `${Astro.url.origin}${Astro.url.pathname}` : "";

// Schema.org LocalBusiness structured data
const schemaData = {
  "@context": "https://schema.org",
  "@type": "SportingGoodsStore",
  "name": "WV Wild Outdoors",
  "description": defaultDescription,
  "url": "https://wvwildoutdoors.com",
  "telephone": SITE_CONTACT.phone,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "121 Birch River Rd",
    "addressLocality": "Birch River",
    "addressRegion": "WV",
    "postalCode": "26610",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 38.4876,
    "longitude": -80.7073
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "10:00",
      "closes": "17:00"
    }
  ],
  "priceRange": "$$",
  "image": "https://wvwildoutdoors.com/og-wvwo-storefront.png",
  "sameAs": [],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Products & Services",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Product", "name": "Firearms" } },
      { "@type": "Offer", "itemOffered": { "@type": "Product", "name": "Ammunition" } },
      { "@type": "Offer", "itemOffered": { "@type": "Product", "name": "Fishing Tackle" } },
      { "@type": "Offer", "itemOffered": { "@type": "Product", "name": "Hunting Gear" } },
      { "@type": "Offer", "itemOffered": { "@type": "Product", "name": "Animal Feed" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "FFL Transfers" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "WV Hunting Licenses" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "WV Fishing Licenses" } }
    ]
  },
  "additionalType": "https://schema.org/GunStore",
  "areaServed": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": 38.4876,
      "longitude": -80.7073
    },
    "geoRadius": 80467
  },
  "knowsAbout": ["FFL transfers", "WV hunting licenses", "firearms", "ammunition", "I-79 corridor hunting supplies"],
  "paymentAccepted": "Cash, Credit Card, Debit Card",
  "currenciesAccepted": "USD"
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description ?? defaultDescription} />

		<!-- Open Graph tags -->
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={ogUrl} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:image:alt" content="WV Wild Outdoors hunting and outdoor shop in Birch River, WV" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={ogTitle} />
		<meta name="twitter:description" content={ogDescription} />
		<meta name="twitter:image" content={ogImage} />

		<!-- Canonical URL -->
		<link rel="canonical" href={ogUrl} />

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Schema.org LocalBusiness structured data -->
		<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

		<!-- Additional page-specific schemas (Product, Breadcrumb, etc.) -->
		{additionalSchemas.map(schema => (
			<script type="application/ld+json" set:html={JSON.stringify(schema)} />
		))}
	</head>
	<body class="bg-brand-cream text-brand-brown min-h-screen flex flex-col font-body bg-noise selection:bg-brand-brown selection:text-brand-cream">
		<slot />
		<StickyPhone />
	</body>
</html>
