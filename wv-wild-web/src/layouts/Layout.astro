  "areaServed": [
    {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": 38.49910,
        "longitude": -80.75460
      },
      "geoRadius": 80467
    },
    {
      "@type": "Place",
      "name": "Sutton Lake",
      "geo": { "@type": "GeoCoordinates", "latitude": 38.6620, "longitude": -80.6932 }
    },
    {
      "@type": "Place",
      "name": "Elk River WMA",
      "geo": { "@type": "GeoCoordinates", "latitude": 38.6833, "longitude": -80.5833 }
