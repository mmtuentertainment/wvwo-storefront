---
import '../styles/global.css';
import { SITE_CONTACT } from '../config/siteContact';
import StickyPhone from '../components/StickyPhone.astro';

interface Props {
	title: string;
    description?: string;
    additionalSchemas?: object[];
}

const {
  title,
  description,
  additionalSchemas = []
} = Astro.props;

const defaultDescription = "WV Wild Outdoors â€” hunting shop at I-79 Exit 57 in Birch River, WV. Firearms, ammo, gear & licenses. Family-owned FFL dealer.";

const ogTitle = title;
const ogDescription = description ?? defaultDescription;

// TODO: Update to wvwildoutdoors.com when domain is purchased
const defaultOgImage = "https://wvwildoutdoors.pages.dev/og-wvwo-storefront.png";

const ogImage = defaultOgImage;

// Canonical URL - use origin+pathname only (no query/hash)
const ogUrl = Astro.url ? `${Astro.url.origin}${Astro.url.pathname}` : "";

// Schema.org LocalBusiness structured data
const schemaData = {
  "@context": "https://schema.org",
  "@type": "SportingGoodsStore",
  "name": "WV Wild Outdoors",
  "description": defaultDescription,
  "url": "https://wvwildoutdoors.pages.dev",  // TODO: Update when domain purchased
  "telephone": SITE_CONTACT.phone,
