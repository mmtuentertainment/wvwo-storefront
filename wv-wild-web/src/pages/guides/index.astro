---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_CONTACT } from '../../config/siteContact';

// Guide data - simple array, easy for Kim to update
const guides = [
  {
    title: "Buck Season Prep",
    description: "Get ready for West Virginia deer season. Rifles, ammo, optics, and everything you need.",
    href: "/guides/buck-season",
    season: "Fall",
    image: "/images/buck-season-hero.jpg"
  },
  {
    title: "Turkey Season Guide",
    description: "Spring gobbler tips, gear checklist, and local spots near Birch River.",
    href: "/guides/turkey-season",
    season: "Spring",
    image: "/images/turkey-season-hero.jpg"
  }
];
---

<Layout
  title="Hunting & Fishing Guides | WV Wild Outdoors"
  description="Local hunting and fishing guides for West Virginia. Season dates, gear checklists, and tips from your neighbors at WV Wild Outdoors in Birch River."
>
  <Header />

  <main class="bg-brand-cream min-h-screen">

    <!-- Hero -->
    <section class="bg-brand-brown text-white py-16 md:py-24 relative overflow-hidden">
      <div class="absolute inset-0 bg-camo opacity-5 pointer-events-none"></div>

      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl">
          <h1 class="font-display font-black text-4xl md:text-6xl mb-4">
            Hunting & Fishing Guides
          </h1>
          <p class="text-xl md:text-2xl text-brand-cream/80 mb-6">
            Local knowledge from your neighbors in Birch River. Season dates, gear checklists,
            and tips we've picked up over the years.
          </p>
          <p class="text-brand-cream/60">
            Questions? Give us a call at <a href={SITE_CONTACT.phoneHref} class="underline hover:text-white">{SITE_CONTACT.phoneDisplay}</a>
          </p>
        </div>
      </div>
    </section>

    <!-- Guide Cards -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {guides.map((guide) => (
            <a
              href={guide.href}
              class="group bg-white rounded-lg shadow-sm border border-stone-100 overflow-hidden hover:shadow-md transition-shadow"
            >
              <div class="aspect-video bg-brand-brown/10 relative overflow-hidden">
                <div class="absolute inset-0 bg-camo opacity-10"></div>
                <div class="absolute top-4 right-4">
                  <span class="bg-brand-orange text-white text-xs font-bold px-3 py-1 rounded">
                    {guide.season}
                  </span>
                </div>
              </div>
              <div class="p-6">
                <h2 class="font-display font-bold text-xl text-brand-brown group-hover:text-sign-green transition-colors mb-2">
                  {guide.title}
                </h2>
                <p class="text-stone-600 mb-4">
                  {guide.description}
                </p>
                <span class="inline-flex items-center text-sign-green font-medium text-sm group-hover:gap-2 transition-all">
                  Read Guide
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>

        <!-- Coming Soon -->
        <div class="mt-12 text-center">
          <p class="text-stone-500 text-sm">
            More guides coming soon: Trout Season, Lake Fishing, and WMA Maps
          </p>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-sign-green text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h2 class="font-display font-bold text-2xl mb-4">
          Need Gear for the Season?
        </h2>
        <p class="text-white/80 mb-6 max-w-xl mx-auto">
          We've got rifles, ammo, fishing tackle, and everything else you need.
          Stop by the shop or give us a call.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/shop"
            class="inline-flex items-center gap-2 bg-white text-sign-green font-bold px-6 py-3 rounded hover:bg-brand-cream transition-colors"
          >
            Browse Shop
          </a>
          <a
            href={SITE_CONTACT.phoneHref}
            class="inline-flex items-center gap-2 bg-white/10 border border-white/30 text-white font-bold px-6 py-3 rounded hover:bg-white/20 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {SITE_CONTACT.phoneDisplay}
          </a>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
