---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import { SITE_CONTACT } from '../../config/siteContact';
---

<Layout
  title="Buck Season Prep | WV Wild Outdoors"
  description="Get ready for West Virginia deer season. Rifles, ammo, optics, and everything you need at WV Wild Outdoors in Birch River."
>
  <Header />

  <main class="bg-brand-cream min-h-screen">

    <!-- Hero -->
    <section class="bg-brand-brown text-white py-16 md:py-24 relative overflow-hidden">
      <!-- Camo overlay -->
      <div class="absolute inset-0 bg-camo opacity-5 pointer-events-none"></div>

      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl">
          <span class="inline-block bg-brand-orange text-white px-4 py-1 rounded font-bold text-sm mb-4 animate-pulse">
            Season Prep Time
          </span>
          <h1 class="font-display font-black text-4xl md:text-6xl mb-4">
            Buck Season Is Coming
          </h1>
          <p class="text-xl md:text-2xl text-brand-cream/80 mb-8">
            Don't wait until opening day. Get your rifle sighted in,
            stock up on ammo, and be ready when the moment comes.
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href={SITE_CONTACT.phoneHref}
              class="inline-flex items-center gap-2 bg-brand-orange text-white font-bold px-8 py-4 rounded hover:bg-orange-700 transition-colors text-lg"
            >
              Call Now: {SITE_CONTACT.phoneDisplay}
            </a>
            <a
              href="/products"
              class="inline-flex items-center gap-2 bg-white/10 border border-white/30 text-white font-bold px-8 py-4 rounded hover:bg-white/20 transition-colors"
            >
              Browse Gear
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Checklist -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown text-center mb-4">
            Your Season Prep Checklist
          </h2>
          <p class="text-center text-stone-600 mb-10">
            Everything you need before you head into the woods.
          </p>

          <div class="space-y-4">
            {[
              { item: "Rifle cleaned and function-checked", tip: "Don't wait until the night before" },
              { item: "Scope zeroed and verified", tip: "We can help sight you in" },
              { item: "Ammunition — enough for practice AND hunting", tip: "Popular calibers go fast" },
              { item: "WV hunting license current", tip: "We're a license agent — get it here" },
              { item: "Buck tag in pocket", tip: "Required for antlered deer" },
              { item: "Blaze orange ready", tip: "500 sq inches required" },
              { item: "Tree stand inspected", tip: "Check straps and cables yearly" },
              { item: "Boots broken in", tip: "Blisters ruin hunts" },
              { item: "Know your zone regulations", tip: "Rules vary by county" },
            ].map((check) => (
              <label class="flex items-start gap-4 bg-white p-4 rounded-lg shadow-sm border border-stone-100 cursor-pointer hover:border-sign-green/30 transition-colors group">
                <input
                  type="checkbox"
                  class="mt-1 w-5 h-5 rounded border-stone-300 text-sign-green focus:ring-sign-green"
                />
                <div class="flex-1">
                  <span class="font-medium text-brand-brown group-hover:text-sign-green transition-colors">
                    {check.item}
                  </span>
                  <p class="text-sm text-stone-500 mt-0.5">{check.tip}</p>
                </div>
              </label>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Services CTA -->
    <section class="bg-sign-green text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h2 class="font-display font-bold text-2xl mb-4">
          Need Help Getting Ready?
        </h2>
        <p class="text-white/80 mb-6 max-w-xl mx-auto">
          Stop by the shop. We'll help you pick the right ammo for your rifle,
          answer your questions, and make sure you're set for opening day.
        </p>
        <a
          href={SITE_CONTACT.mapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-white text-sign-green font-bold px-6 py-3 rounded hover:bg-brand-cream transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Get Directions
        </a>
      </div>
    </section>

    <!-- Newsletter -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-xl mx-auto">
          <EmailCapture
            variant="card"
            heading="Get Season Updates"
            subheading="Ammo restocks, regulation changes, and local hunting reports delivered to your inbox."
          />
        </div>
      </div>
    </section>

    <!-- WV DNR Badge -->
    <section class="bg-brand-mud text-brand-cream py-6">
      <div class="container mx-auto px-4 text-center">
        <div class="inline-flex items-center gap-3">
          <img src="/badges/wvdnr.svg" alt="WV DNR License Agent" width="32" height="32" class="h-8 opacity-80" />
          <span class="text-sm">Official WV DNR License Agent — Get your license here</span>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>

<style>
  /* Interactive checkbox animation */
  input[type="checkbox"]:checked + div span {
    text-decoration: line-through;
    opacity: 0.6;
  }
</style>
