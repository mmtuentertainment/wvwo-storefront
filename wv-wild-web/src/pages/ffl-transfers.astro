---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import QuoteForm from '../components/QuoteForm.astro';
import { SITE_CONTACT } from '../config/siteContact';
---

<Layout
  title="FFL Transfers | WV Wild Outdoors"
  description="Need an FFL for your online firearm purchase? WV Wild Outdoors offers affordable FFL transfers in Birch River, WV. Licensed Type 02 dealer."
>
  <Header />

  <main class="bg-brand-cream min-h-screen">

    <!-- Hero Section -->
    <section class="bg-brand-brown text-white py-12 md:py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl">
          <span class="inline-block bg-sign-green/20 text-sign-green px-3 py-1 rounded text-sm font-medium mb-4">
            Licensed FFL Dealer
          </span>
          <h1 class="font-display font-black text-4xl md:text-5xl mb-4">
            FFL Transfers
          </h1>
          <p class="text-xl text-brand-cream/80 mb-6">
            Bought a firearm online? We can receive it for you.
            Local, licensed, and no-hassle transfers in Braxton County.
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="/ffl-transfer-request"
              class="inline-flex items-center gap-2 bg-sign-green text-white font-bold px-6 py-3 rounded hover:bg-green-800 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Start Transfer Request
            </a>
            <a
              href={SITE_CONTACT.phoneHref}
              class="inline-flex items-center gap-2 bg-white/10 border border-white/30 text-white font-bold px-6 py-3 rounded hover:bg-white/20 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call: {SITE_CONTACT.phoneDisplay}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown text-center mb-12">
          How FFL Transfers Work
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="text-center">
            <div class="w-16 h-16 bg-brand-orange/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="font-display font-bold text-2xl text-brand-orange">1</span>
            </div>
            <h3 class="font-bold text-lg text-brand-brown mb-2">Contact Us First</h3>
            <p class="text-stone-600">
              Call or submit the form below before you purchase.
              We'll provide our FFL info to give to the seller.
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-brand-orange/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="font-display font-bold text-2xl text-brand-orange">2</span>
            </div>
            <h3 class="font-bold text-lg text-brand-brown mb-2">We Receive It</h3>
            <p class="text-stone-600">
              The seller ships to our shop. We'll call you when it arrives â€”
              usually 3-7 business days.
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-brand-orange/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="font-display font-bold text-2xl text-brand-orange">3</span>
            </div>
            <h3 class="font-bold text-lg text-brand-brown mb-2">Pick It Up</h3>
            <p class="text-stone-600">
              Come in, complete the ATF 4473, pass NICS background check,
              pay the transfer fee, and you're done.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- What to Bring -->
    <section class="bg-white py-12">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto">
          <h2 class="font-display font-bold text-xl text-brand-brown mb-6">
            What to Bring
          </h2>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-sign-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-stone-700">
                <strong>Valid government-issued photo ID</strong> (WV Driver's License or ID)
              </span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-sign-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-stone-700">
                <strong>Proof of current WV address</strong> if different from ID (utility bill, bank statement)
              </span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-sign-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-stone-700">
                <strong>Payment for transfer fee</strong> (cash or card accepted)
              </span>
            </li>
          </ul>

          <div class="mt-8 p-4 bg-stone-50 rounded border border-stone-200">
            <p class="text-sm text-stone-600">
              <strong>Note:</strong> You must be 21+ for handguns, 18+ for long guns.
              West Virginia residents only for handgun transfers.
              Out-of-state residents from contiguous states may transfer long guns per federal law.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Quote Form -->
    <section id="quote-form" class="py-12 md:py-16 bg-stone-50">
      <div class="container mx-auto px-4">
        <div class="max-w-xl mx-auto">
          <div class="text-center mb-8">
            <h2 class="font-display font-bold text-2xl text-brand-brown mb-2">
              Request Transfer Info
            </h2>
            <p class="text-stone-600">
              Let us know what you're looking to transfer and we'll get back to you with our FFL details.
            </p>
          </div>

          <QuoteForm formType="ffl-transfer" heading="Transfer Request" />
        </div>
      </div>
    </section>

    <!-- FFL Badge -->
    <section class="bg-brand-mud text-brand-cream py-8">
      <div class="container mx-auto px-4 text-center">
        <div class="inline-flex items-center gap-4">
          <img src="/badges/ffl.svg" alt="Federal Firearms License" width="48" height="40" class="h-10 opacity-80" />
          <div class="text-left">
            <p class="font-bold text-white">Licensed FFL Type 02 Dealer</p>
            <p class="text-sm text-brand-cream/60">Serving Braxton County since 2008</p>
          </div>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
