---
/**
 * Burnsville Lake Fishing Page
 * SPEC-21: Refactored to use LakeTemplate component
 *
 * Key highlights:
 * - STATE RECORD MUSKIE: 51 lbs, 55.06" (Lucas King, March 2022)
 * - 15-inch walleye minimum (Burnsville-specific regulation)
 * - Excellent crappie (40-60 fish evenings)
 * - 3 boat ramps, marina with pontoon rentals
 * - 200+ campsites between Bulltown and Riffle Run
 */

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import SchemaBreadcrumb from '../../components/seo/SchemaBreadcrumb.astro';
import LakeTemplate from '../../components/templates/LakeTemplate.astro';
import { burnsvilleLakeData } from '../../data/lakes/burnsville';

// Place schema for geographic SEO
const placeSchema = {
  "@context": "https://schema.org",
  "@type": "Place",
  "name": "Burnsville Lake",
  "description": "968-acre state record muskie fishery with 15-inch walleye minimum, excellent crappie fishing, 3 boat ramps, marina rentals, and 200+ campsites. 25 minutes from WV Wild Outdoors.",
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": burnsvilleLakeData.coordinates?.lat || 38.845430,
    "longitude": burnsvilleLakeData.coordinates?.lng || -80.617343
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Burnsville",
    "addressRegion": "WV",
    "addressCountry": "US"
  },
  "amenityFeature": [
    { "@type": "LocationFeatureSpecification", "name": "Fishing", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Boat Ramps", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Camping", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Marina", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "ADA Access", "value": true }
  ]
};

// Breadcrumb schema data
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Hunt Near Us', url: '/near/' },
  { name: 'Burnsville Lake', url: '/near/burnsville-lake/' }
];
---

<Layout
  title="Burnsville Lake Fishing Guide - State Record Muskie | WV Wild Outdoors"
  description="Complete guide to Burnsville Lake fishing. State record muskie (51 lbs), 15-inch walleye minimum, 40-60 crappie evenings. 3 boat ramps, marina rentals, 200+ campsites. 25 minutes from our shop."
  additionalSchemas={[placeSchema]}
>
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  <SchemaBreadcrumb items={breadcrumbItems} />

  {/*
    LakeTemplate handles all content sections:
    - Hero with quick stats
    - Fishing spots (What to Fish + Where to Fish)
    - Marina & boat access
    - Activities (muskie, crappie, walleye, trout, catfish, camping)
    - Seasonal fishing guide
    - Regulations & safety (15-inch walleye minimum!)
    - Gear checklist
    - Related shop categories
    - CTA
  */}
  <LakeTemplate {...burnsvilleLakeData} />

  {/* Cross-link to WMA hunting page */}
  <section class="py-8 bg-white border-t border-brand-brown/15">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-brand-brown/60 mb-3">Looking for hunting information?</p>
        <a
          href="/near/burnsville-lake-wma/"
          class="inline-flex items-center gap-2 text-sign-green font-bold hover:underline"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
          Burnsville Lake WMA Hunting Guide
        </a>
      </div>
    </div>
  </section>

  {/* Newsletter signup */}
  <section class="py-12 md:py-16 bg-brand-cream">
    <div class="container mx-auto px-4">
      <div class="max-w-xl mx-auto">
        <EmailCapture
          variant="card"
          heading="Get Local Fishing Updates"
          subheading="Stocking reports, what's biting where, and tackle restocks delivered to your inbox."
        />
      </div>
    </div>
  </section>

  <Footer />
</Layout>
