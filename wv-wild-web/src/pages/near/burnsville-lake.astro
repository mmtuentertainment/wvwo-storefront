---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import SchemaBreadcrumb from '../../components/seo/SchemaBreadcrumb.astro';
import { SITE_CONTACT } from '../../config/siteContact';

// Place schema for geographic SEO
const placeSchema = {
  "@context": "https://schema.org",
  "@type": "Place",
  "name": "Burnsville Lake Wildlife Management Area",
  "description": "Over 12,000 acres of public hunting land in Braxton County, West Virginia. 20 minutes from WV Wild Outdoors.",
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 38.8423,
    "longitude": -80.6234
  },
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "2550 S Main St",
    "addressLocality": "Burnsville",
    "addressRegion": "WV",
    "postalCode": "26335",
    "addressCountry": "US"
  }
};

// Breadcrumb schema data (3-level: Home → Hunt Near Us → Burnsville Lake WMA)
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Hunt Near Us', url: '/near/' },
  { name: 'Burnsville Lake WMA', url: '/near/burnsville-lake/' }
];
---

<Layout
  title="Burnsville Lake WMA Hunting Guide | WV Wild Outdoors"
  description="Hunting guide for Burnsville Lake Wildlife Management Area. 12,000+ acres of public land, 20 minutes from our shop. Deer, turkey, and small game."
  additionalSchemas={[placeSchema]}
>
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  <SchemaBreadcrumb items={breadcrumbItems} />

  <main class="bg-brand-cream min-h-screen">

    <!-- Hero -->
    <section class="bg-brand-brown text-white py-16 md:py-24 relative overflow-hidden">
      <div class="absolute inset-0 bg-camo opacity-5 pointer-events-none"></div>

      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="inline-block bg-sign-green text-white px-4 py-1 rounded-sm font-bold text-sm">
              20 min from shop
            </span>
            <span class="inline-block bg-brand-orange text-white px-4 py-1 rounded-sm font-bold text-sm">
              12,000+ Acres
            </span>
          </div>
          <h1 class="font-display font-black text-4xl md:text-6xl mb-4">
            Burnsville Lake WMA
          </h1>
          <p class="text-xl md:text-2xl text-brand-cream/80 mb-6">
            Public hunting land right in our backyard. Deer, turkey, grouse, and squirrel
            across rolling hardwood ridges.
          </p>
          <p class="text-brand-cream/60">
            Stop by the shop before you head out — we'll get you set up with licenses, ammo, and directions.
          </p>
        </div>
      </div>
    </section>

    <!-- Quick Info -->
    <section class="py-8 bg-white border-b border-brand-brown/15">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div>
            <span class="block text-2xl font-bold text-brand-brown">12,000+</span>
            <span class="text-sm text-brand-brown/60">Acres</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">20 min</span>
            <span class="text-sm text-brand-brown/60">From Shop</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">Braxton Co.</span>
            <span class="text-sm text-brand-brown/60">Location</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">Year-Round</span>
            <span class="text-sm text-brand-brown/60">Access</span>
          </div>
        </div>
      </div>
    </section>

    <!-- What to Hunt -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-8">
            What to Hunt
          </h2>

          <div class="space-y-6">
            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">White-tailed Deer</h3>
              <p class="text-brand-brown/75 mb-3">
                Good deer population in the hardwood ridges. Buck firearms season in November/December
                is popular here. Archery season starts in late September.
              </p>
              <p class="text-sm text-brand-brown/60">
                <strong>Best areas:</strong> Ridge tops and oak flats for acorn mast. Creek bottoms for rutting bucks.
              </p>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">Wild Turkey</h3>
              <p class="text-brand-brown/75 mb-3">
                Spring gobbler season is excellent here. Birds roost in the mature timber and
                work the ridges in the mornings. Good road access to set up early.
              </p>
              <p class="text-sm text-brand-brown/60">
                <strong>Best areas:</strong> Field edges and old logging roads. Listen for gobbles at dawn.
              </p>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">Small Game</h3>
              <p class="text-brand-brown/75 mb-3">
                Squirrel hunting is underrated here — lots of hickory and oak producing good mast.
                Grouse in the younger timber and along creek edges.
              </p>
              <p class="text-sm text-brand-brown/60">
                <strong>Best areas:</strong> Mixed hardwoods for squirrel. Regenerating cuts and laurel thickets for grouse.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Getting There -->
    <section class="py-12 md:py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-8">
            Getting There
          </h2>

          <div class="bg-brand-cream p-6 rounded-sm border-l-4 border-sign-green mb-6">
            <h3 class="font-bold text-brand-brown mb-2">From Our Shop</h3>
            <ol class="text-brand-brown/75 space-y-2 list-decimal list-inside">
              <li>Head north on US-19 toward I-79</li>
              <li>Take I-79 North to Exit 67 (Burnsville)</li>
              <li>Follow signs to Burnsville Lake / WMA</li>
              <li>About 20 minutes total drive time</li>
            </ol>
          </div>

          <div class="bg-brand-cream p-6 rounded-sm border-l-4 border-brand-orange">
            <h3 class="font-bold text-brand-brown mb-2">From I-79</h3>
            <ol class="text-brand-brown/75 space-y-2 list-decimal list-inside">
              <li>Take Exit 67 (Burnsville)</li>
              <li>Head east on WV-5</li>
              <li>WMA access roads are well marked</li>
              <li>Stop by our shop on your way (just off Exit 57)</li>
            </ol>
          </div>

          <p class="mt-6 text-sm text-brand-brown/60">
            Multiple parking areas and access points throughout the WMA. Main access via
            Bulltown Historical Area off I-79.
          </p>
        </div>
      </div>
    </section>

    <!-- What to Bring -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-4">
            What to Bring
          </h2>
          <p class="text-brand-brown/75 mb-8">
            We've got most of this in stock. Stop by before you head out.
          </p>

          <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">For Deer Hunting</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Rifle and appropriate ammo
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Blaze orange (500 sq in required)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  WV hunting license + deer stamp
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Knife and game bags
                </li>
              </ul>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">For Turkey Hunting</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Shotgun + turkey loads
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Full camo (head to toe)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Turkey calls (box/slate/diaphragm)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  WV license + turkey stamp
                </li>
              </ul>
            </div>
          </div>

          <div class="mt-8 text-center">
            <a
              href="/shop"
              class="inline-flex items-center gap-2 bg-sign-green text-white font-bold px-6 py-3 rounded-sm hover:bg-sign-green/90 motion-safe:transition-colors motion-reduce:transition-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-orange"
            >
              Browse Our Gear
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-sign-green text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h2 class="font-display font-bold text-2xl mb-4">
          Stop By Before You Head Out
        </h2>
        <p class="text-white/80 mb-6 max-w-xl mx-auto">
          We're on your way. Grab your license, stock up on ammo, and we'll point you
          to the best spots on the WMA.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href={SITE_CONTACT.mapsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-white text-sign-green font-bold px-6 py-3 rounded-sm hover:bg-brand-cream motion-safe:transition-colors motion-reduce:transition-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/60"
          >
            <svg aria-hidden="true" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Get Directions to Shop
          </a>
          <a
            href={SITE_CONTACT.phoneHref}
            class="inline-flex items-center gap-2 bg-white/10 border border-white/30 text-white font-bold px-6 py-3 rounded-sm hover:bg-white/20 motion-safe:transition-colors motion-reduce:transition-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/60"
          >
            {SITE_CONTACT.phoneDisplay}
          </a>
        </div>
      </div>
    </section>

    <!-- Newsletter -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-xl mx-auto">
          <EmailCapture
            variant="card"
            heading="Get Local Hunting Updates"
            subheading="Season reminders, what's hitting where, and gear restocks delivered to your inbox."
          />
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
