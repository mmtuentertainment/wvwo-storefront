---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import SchemaBreadcrumb from '../../components/seo/SchemaBreadcrumb.astro';
import { SITE_CONTACT } from '../../config/siteContact';

// Place schema for geographic SEO
// LOCATION: Burnsville Lake, Braxton Co., WV
// TRAVEL TIME: 45 min from shop (I-79 Exit 57 to Exit 67, then US-19 north)
// COORDINATES: 38.84543, -80.617343 (Recreation.gov gateway)
// ACCESS: Bulltown boat ramp (primary); Riffle Run (secondary)
const placeSchema = {
  "@context": "https://schema.org",
  "@type": "Place",
  "name": "Burnsville Lake",
  "description": "968-acre Army Corps lake with state-record musky fishing, Bulltown Historical Area, and camping. 45 minutes from WV Wild Outdoors.",
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 38.84543,
    "longitude": -80.617343
  },
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "1494 S. Main Street",
    "addressLocality": "Burnsville",
    "addressRegion": "WV",
    "postalCode": "26335",
    "addressCountry": "US"
  },
  "containedInPlace": {
    "@type": "City",
    "name": "Burnsville",
    "address": { "addressRegion": "WV" }
  },
  "amenityFeature": [
    { "@type": "LocationFeatureSpecification", "name": "Fishing", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Boat Ramps", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Camping", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Swimming", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Historic Site", "value": true }
  ]
};

// Breadcrumb schema data (3-level: Home → Hunt Near Us → Burnsville Lake)
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Hunt Near Us', url: '/near/' },
  { name: 'Burnsville Lake', url: '/near/burnsville-lake-recreation/' }
];
---

<Layout
  title="Burnsville Lake Fishing & Camping Guide | WV Wild Outdoors"
  description="Fishing and camping guide for Burnsville Lake — home of state-record musky. 968 acres with excellent crappie, bass, and catfish. Bulltown Historical Area and campgrounds. 45 minutes from our shop."
  additionalSchemas={[placeSchema]}
>
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  <SchemaBreadcrumb items={breadcrumbItems} />

  <main class="bg-brand-cream min-h-screen">

    <!-- Hero -->
    <section class="bg-brand-brown text-white py-16 md:py-24 relative overflow-hidden">
      <div class="absolute inset-0 bg-camo opacity-5 pointer-events-none"></div>

      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="inline-block bg-sign-green text-white px-4 py-1 rounded-sm font-bold text-sm">
              45 min from shop
            </span>
            <span class="inline-block bg-brand-orange text-white px-4 py-1 rounded-sm font-bold text-sm">
              968 Acres
            </span>
          </div>
          <h1 class="font-display font-black text-4xl md:text-6xl mb-4">
            Burnsville Lake
          </h1>
          <p class="text-xl md:text-2xl text-brand-cream/80 mb-6">
            State-record musky water with some of the best crappie fishing in central West Virginia.
            Plus Civil War history right on the shore if you need a break from catching fish.
          </p>
          <p class="text-brand-cream/60">
            Stop by the shop before you head out — we'll get you set up with licenses, tackle, and tips on what's hitting.
          </p>
        </div>
      </div>
    </section>

    <!-- Quick Info -->
    <section class="py-8 bg-white border-b border-brand-brown/15">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div>
            <span class="block text-2xl font-bold text-brand-brown">968</span>
            <span class="text-sm text-brand-brown/60">Acres</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">45 min</span>
            <span class="text-sm text-brand-brown/60">From Shop</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">Braxton Co.</span>
            <span class="text-sm text-brand-brown/60">Location</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">Year-Round</span>
            <span class="text-sm text-brand-brown/60">Access</span>
          </div>
        </div>
      </div>
    </section>

    <!-- What to Fish -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-8">
            What to Fish
          </h2>

          <div class="space-y-6">
            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-display font-bold text-lg text-brand-brown">Musky</h3>
                <span class="text-sm text-brand-orange font-bold">State Record Water</span>
              </div>
              <p class="text-brand-brown/75 mb-3">
                This lake has produced the last three state-record musky — the biggest over 50 pounds.
                If you're serious about trophy musky, Burnsville should be on your list.
              </p>
              <p class="text-sm text-brand-brown/60">
                <strong>Tips:</strong> Fall is prime time. Big swimbaits and jerkbaits worked along
                points and drop-offs. Be patient — you might fish all day for one shot, but it could
                be the fish of a lifetime.
              </p>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">Crappie</h3>
              <p class="text-brand-brown/75 mb-3">
                Some folks say Burnsville is one of the best crappie lakes in central West Virginia.
                According to the marina, it's nothing to go out and catch forty to sixty fish in an evening.
                They don't get huge, but you can catch them in bunches.
              </p>
              <p class="text-sm text-brand-brown/60">
                <strong>Tips:</strong> Jigs and minnows around brush piles and submerged structure.
                Spring spawning season brings them shallow. Evening bites can be especially good.
              </p>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">Bass</h3>
              <p class="text-brand-brown/75 mb-3">
                Largemouth, smallmouth, and spotted bass all swim here. Largemouth reach up to 5 pounds,
                and recent tournament results show the bass fishing has been very good lately.
              </p>
              <p class="text-sm text-brand-brown/60">
                <strong>Tips:</strong> Work the banks and coves for largemouth. Smallmouth hold on
                rocky points and ledges. Soft plastics, spinnerbaits, and crankbaits all produce.
              </p>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">Catfish & Walleye</h3>
              <p class="text-brand-brown/75 mb-3">
                Channel catfish, flatheads, and blue catfish lurk in the deeper holes. Walleye and
                saugeye add variety — worth targeting at dawn and dusk around points.
              </p>
              <p class="text-sm text-brand-brown/60">
                <strong>Tips:</strong> Cut bait and chicken liver for catfish near the dam. Jigs and
                live bait for walleye in low-light conditions. Trout are stocked February through May.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bulltown Historical Area -->
    <section class="py-12 md:py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-4">
            Bulltown Historical Area
          </h2>
          <p class="text-brand-brown/75 mb-8">
            Fish in the morning, explore some Civil War history in the afternoon. The Bulltown
            Historic Area sits right next to the campground — makes for a good break when
            the fish aren't biting.
          </p>

          <div class="space-y-6">
            <div class="bg-brand-cream p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">The Battle of Bulltown</h3>
              <p class="text-brand-brown/75 mb-3">
                On October 13, 1863, Colonel "Mudwall" Jackson (cousin of Stonewall) led 800
                Confederate soldiers against 400 Union troops defending the covered bridge here.
                It was the Confederacy's last major offensive in West Virginia — and they lost.
              </p>
              <p class="text-sm text-brand-brown/60">
                The site is on the National Register of Historic Places. The annual Battle of Bulltown
                reenactment is held in October — check locally for exact dates.
              </p>
            </div>

            <div class="bg-brand-cream p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-display font-bold text-lg text-brand-brown mb-2">What to See</h3>
              <ul class="text-brand-brown/75 space-y-2">
                <li>• Visitor center with exhibits about the battle and pioneer life</li>
                <li>• 19th century log homes and the Cunningham House</li>
                <li>• Union fortifications still visible on the hillside</li>
                <li>• Burial site of seven unknown Confederate soldiers</li>
                <li>• Sections of the original Weston-Gauley Turnpike</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Camping -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-8">
            Camping
          </h2>

          <div class="space-y-6">
            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <div class="flex justify-between items-start mb-3">
                <h3 class="font-display font-bold text-lg text-brand-brown">Bulltown Campground</h3>
                <span class="text-sm text-sign-green font-bold">Reservable</span>
              </div>
              <p class="text-brand-brown/75 mb-3">
                The big campground right next to the historical area. Nearly 200 sites spread across
                multiple loops, with a boat ramp in the campground and beach about a mile away.
                Good mix of full hookups and electric-only sites.
              </p>
              <ul class="text-sm text-brand-brown/60 space-y-1">
                <li>• Electric (30/50 amp), water, and sewer hookups available</li>
                <li>• Showers, restrooms, laundry, dump station</li>
                <li>• WiFi, playground, basketball court, horseshoe pit</li>
                <li>• Season: Late April through Thanksgiving</li>
                <li>• Fees: $20-40/night (varies by site)</li>
                <li>• Reserve at <a href="https://www.recreation.gov/camping/campgrounds/233443" target="_blank" rel="noopener noreferrer" class="text-sign-green hover:underline">Recreation.gov</a> or call <a href="tel:+13044528006" class="text-sign-green hover:underline">(304) 452-8006</a></li>
              </ul>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <div class="flex justify-between items-start mb-3">
                <h3 class="font-display font-bold text-lg text-brand-brown">Riffle Run Campground</h3>
                <span class="text-sm text-sign-green font-bold">Reservable</span>
              </div>
              <p class="text-brand-brown/75 mb-3">
                Smaller campground near the dam with 60 sites — 54 full hookups (50 amp, water, sewer)
                and 6 primitive. Wooded and quiet, with a shower house and laundry facility on site.
              </p>
              <ul class="text-sm text-brand-brown/60 space-y-1">
                <li>• 54 full hookup sites (50 amp electric, water, sewer)</li>
                <li>• 6 primitive sites</li>
                <li>• Shower house and laundry</li>
                <li>• Boat ramp and marina nearby</li>
                <li>• Reserve at <a href="https://www.recreation.gov/camping/campgrounds/10234906" target="_blank" rel="noopener noreferrer" class="text-sign-green hover:underline">Recreation.gov</a></li>
              </ul>
            </div>
          </div>

          <p class="text-sm text-brand-brown/50 mt-6 text-center">
            Fees and availability subject to change — always verify at <a href="https://www.recreation.gov/gateways/315" target="_blank" rel="noopener noreferrer" class="text-sign-green hover:underline">Recreation.gov</a> before you go.
          </p>
        </div>
      </div>
    </section>

    <!-- On the Water -->
    <section class="py-12 md:py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-8">
            On the Water
          </h2>

          <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-brand-cream p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">Boat Ramps</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Bulltown (paved, accessible)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Riffle Run (near dam)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  All wheelchair accessible
                </li>
              </ul>
            </div>

            <div class="bg-brand-cream p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">Other Facilities</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Swimming beach (no lifeguard)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Marina with boat rentals
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  6 reservable picnic shelters
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  100+ miles of trails
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Getting There -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-8">
            Getting There
          </h2>

          <div class="bg-white p-6 rounded-sm border-l-4 border-sign-green mb-6">
            <h3 class="font-bold text-brand-brown mb-2">To Bulltown (From Our Shop)</h3>
            <ol class="text-brand-brown/75 space-y-2 list-decimal list-inside">
              <li>Head north on I-79 from Exit 57</li>
              <li>Take Exit 67 (Flatwoods)</li>
              <li>Head north on US-19 for about 10 miles</li>
              <li>Follow signs to Bulltown Campground (~45 minutes total)</li>
            </ol>
          </div>

          <div class="bg-white p-6 rounded-sm border-l-4 border-brand-orange">
            <h3 class="font-bold text-brand-brown mb-2">To Riffle Run / Dam Area</h3>
            <ol class="text-brand-brown/75 space-y-2 list-decimal list-inside">
              <li>Head north on I-79 from Exit 57</li>
              <li>Take Exit 79</li>
              <li>Follow old Route 5 east for about 3 miles</li>
              <li>Stop by our shop on your way back — we're right off Exit 57</li>
            </ol>
          </div>

          <p class="mt-6 text-sm text-brand-brown/60">
            U.S. Army Corps of Engineers - Burnsville Lake: <a href="tel:+13048532371" class="text-sign-green hover:underline">(304) 853-2371</a>
          </p>
        </div>
      </div>
    </section>

    <!-- What to Bring -->
    <section class="py-12 md:py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-4">
            What to Bring
          </h2>
          <p class="text-brand-brown/75 mb-8">
            We've got most of this in stock. Stop by before you head out.
          </p>

          <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-brand-cream p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">For Fishing</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  WV fishing license
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Crappie jigs and minnows
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Bass tackle (soft plastics, spinnerbaits)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Heavy gear for musky (if you're serious)
                </li>
              </ul>
            </div>

            <div class="bg-brand-cream p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">For Camping</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Tent or RV (hookups available)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Cooler and provisions
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Firewood (or buy at campground)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
