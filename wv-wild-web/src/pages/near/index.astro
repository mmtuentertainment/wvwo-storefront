---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_CONTACT } from '../../config/siteContact';

// Outdoor areas near I-79 Exit 57 (Frametown), WV
const outdoorAreas = [
  // Wildlife Management Areas
  {
    name: "Burnsville Lake WMA",
    slug: "burnsville-lake",
    type: "WMA",
    driveTime: "45 min",
    description: "Over 12,000 acres of public hunting land surrounding Burnsville Lake. Great for deer, turkey, and small game.",
    hunting: ["Deer", "Turkey", "Squirrel", "Grouse"],
    fishing: ["Bass", "Catfish", "Crappie"],
    hasDetailPage: true
  },
  {
    name: "Elk River WMA",
    slug: "elk-river",
    type: "WMA",
    driveTime: "20 min",
    description: "Hardwood ridges and creek bottoms along the Elk River. Excellent turkey hunting in spring. Over 18,000 acres.",
    hunting: ["Deer", "Turkey", "Bear", "Grouse"],
    fishing: ["Trout", "Smallmouth Bass"],
    hasDetailPage: true
  },
  {
    name: "Stonewall Jackson Lake WMA",
    slug: "stonewall-jackson",
    type: "WMA",
    driveTime: "40 min",
    description: "Rolling hills and lake access near Weston. Popular for waterfowl and deer.",
    hunting: ["Deer", "Turkey", "Waterfowl"],
    fishing: ["Bass", "Musky", "Catfish"],
    hasDetailPage: false
  },
  // Lakes & Recreation Areas
  {
    name: "Sutton Lake",
    slug: "sutton-lake",
    type: "Lake",
    driveTime: "25 min",
    description: "1,440-acre Army Corps lake with great fishing and camping. Boat ramps, campgrounds, and swimming areas.",
    hunting: [],
    fishing: ["Largemouth Bass", "Smallmouth Bass", "Catfish", "Crappie", "Walleye"],
    camping: true,
    hasDetailPage: true
  },
  {
    name: "Summersville Lake",
    slug: "summersville-lake",
    type: "Lake",
    driveTime: "30 min",
    description: "The 'Little Bahamas of the East' - 2,700 acres of crystal clear water. Premier bass fishing and scuba diving.",
    hunting: [],
    fishing: ["Smallmouth Bass", "Largemouth Bass", "Walleye", "Catfish"],
    camping: true,
    hasDetailPage: true
  },
  {
    name: "Burnsville Lake",
    slug: "burnsville-lake-recreation",
    type: "Lake",
    driveTime: "45 min",
    description: "968-acre lake with campgrounds, boat ramps, and great fishing. Bulltown Historical Area nearby.",
    hunting: [],
    fishing: ["Bass", "Catfish", "Crappie", "Musky"],
    camping: true,
    hasDetailPage: false
  },
  // National Forest
  {
    name: "Monongahela National Forest",
    slug: "monongahela",
    type: "National Forest",
    driveTime: "1 hour",
    description: "Nearly a million acres of public land across eastern WV. Endless hunting, fishing, and camping opportunities.",
    hunting: ["Deer", "Turkey", "Bear", "Grouse", "Squirrel"],
    fishing: ["Trout", "Smallmouth Bass"],
    camping: true,
    hasDetailPage: false
  }
];
---

<Layout
  title="Hunt Near Us | Wildlife Management Areas | WV Wild Outdoors"
  description="Public hunting and fishing areas near I-79 Exit 57 (Frametown), WV. Our shop is about 1,500 feet from the ramp. Burnsville Lake, Elk River, and Stonewall Jackson WMAs all within 40 minutes."
>
  <Header />

  <main class="bg-brand-cream min-h-screen">

    <!-- Hero -->
    <section class="bg-brand-brown text-white py-16 md:py-24 relative overflow-hidden">
      <div class="absolute inset-0 bg-camo opacity-5 pointer-events-none"></div>

      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl">
          <span class="inline-block bg-sign-green text-white px-4 py-1 rounded-sm font-bold text-sm mb-4">
            I-79 Exit 57
          </span>
          <h1 class="font-display font-black text-4xl md:text-6xl mb-4">
            Hunt Near Us
          </h1>
          <p class="text-xl md:text-2xl text-brand-cream/80 mb-6">
            Three Wildlife Management Areas within 40 minutes of our door.
            Stop in for licenses, ammo, and local tips before you head out.
          </p>
          <p class="text-brand-cream/60">
            <svg aria-hidden="true" focusable="false" class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            We're just off I-79 Exit 57 (Frametown) â€” about 1,500 feet from the ramp
          </p>
        </div>
      </div>
    </section>

    <!-- Wildlife Management Areas -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-display font-bold text-2xl text-brand-brown mb-6">Wildlife Management Areas</h2>
          <div class="space-y-6">
            {outdoorAreas.filter(a => a.type === "WMA").map((area) => (
              <div class="bg-white rounded-sm border border-stone-200 overflow-hidden">
                <div class="md:flex">
                  <div class="md:w-1/4 bg-sign-green/10 relative p-6">
                    <span class="inline-block bg-sign-green text-white text-xs font-bold px-3 py-1 rounded-sm mb-2">
                      WMA
                    </span>
                    <p class="text-sign-green font-bold">{area.driveTime}</p>
                    <p class="text-xs text-stone-500">from shop</p>
                  </div>
                  <div class="md:w-3/4 p-6">
                    <h3 class="font-display font-bold text-xl text-brand-brown mb-2">
                      {area.name}
                    </h3>
                    <p class="text-stone-600 mb-4 text-sm">
                      {area.description}
                    </p>
                    <div class="flex flex-wrap gap-4 text-sm">
                      {area.hunting.length > 0 && (
                        <div>
                          <span class="text-xs font-bold text-stone-400 uppercase">Hunting:</span>
                          <span class="text-stone-700 ml-1">{area.hunting.join(", ")}</span>
                        </div>
                      )}
                      {area.fishing.length > 0 && (
                        <div>
                          <span class="text-xs font-bold text-stone-400 uppercase">Fishing:</span>
                          <span class="text-stone-700 ml-1">{area.fishing.join(", ")}</span>
                        </div>
                      )}
                    </div>
                    {area.hasDetailPage && (
                      <a
                        href={`/near/${area.slug}`}
                        class="inline-flex items-center text-sign-green font-medium text-sm mt-4 motion-safe:hover:gap-2 motion-safe:transition-[gap] motion-reduce:transition-none"
                      >
                        Full Guide
                        <svg aria-hidden="true" focusable="false" class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Lakes & Recreation -->
    <section class="py-12 md:py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-display font-bold text-2xl text-brand-brown mb-6">Lakes & Recreation Areas</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {outdoorAreas.filter(a => a.type === "Lake").map((area) => (
              <div class="bg-brand-cream rounded-sm p-6 border border-stone-200">
                <div class="flex items-start justify-between mb-3">
                  <h3 class="font-display font-bold text-lg text-brand-brown">
                    {area.name}
                  </h3>
                  <span class="text-sign-green font-bold text-sm">{area.driveTime}</span>
                </div>
                <p class="text-stone-600 text-sm mb-4">
                  {area.description}
                </p>
                <div class="text-sm">
                  <span class="text-xs font-bold text-stone-400 uppercase">Fishing:</span>
                  <span class="text-stone-700 ml-1">{area.fishing.join(", ")}</span>
                </div>
                {area.camping && (
                  <div class="mt-2 inline-flex items-center text-xs text-sign-green">
                    <svg aria-hidden="true" focusable="false" class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z"></path>
                    </svg>
                    Camping Available
                  </div>
                )}
                {area.hasDetailPage && (
                  <a
                    href={`/near/${area.slug}`}
                    class="inline-flex items-center text-sign-green font-medium text-sm mt-4 motion-safe:hover:gap-2 motion-safe:transition-[gap] motion-reduce:transition-none"
                  >
                    Full Guide
                    <svg aria-hidden="true" focusable="false" class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- National Forest -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="font-display font-bold text-2xl text-brand-brown mb-6">National Forest</h2>
          {outdoorAreas.filter(a => a.type === "National Forest").map((area) => (
            <div class="bg-white rounded-sm border border-stone-200 p-6 md:p-8">
              <div class="md:flex md:items-center md:justify-between mb-4">
                <h3 class="font-display font-bold text-xl text-brand-brown">
                  {area.name}
                </h3>
                <span class="text-sign-green font-bold">{area.driveTime} to nearest access</span>
              </div>
              <p class="text-stone-600 mb-4">
                {area.description}
              </p>
              <div class="flex flex-wrap gap-6 text-sm">
                <div>
                  <span class="text-xs font-bold text-stone-400 uppercase">Hunting:</span>
                  <span class="text-stone-700 ml-1">{area.hunting.join(", ")}</span>
                </div>
                <div>
                  <span class="text-xs font-bold text-stone-400 uppercase">Fishing:</span>
                  <span class="text-stone-700 ml-1">{area.fishing.join(", ")}</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Before You Go CTA -->
    <section class="bg-sign-green text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h2 class="font-display font-bold text-2xl mb-4">
          Stop By Before You Head Out
        </h2>
        <p class="text-white/80 mb-6 max-w-xl mx-auto">
          We're right on your way. Grab your license, stock up on ammo, and we'll
          give you the latest on what's been hitting where.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href={SITE_CONTACT.mapsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-white text-sign-green font-bold px-6 py-3 rounded-sm hover:bg-brand-cream motion-safe:transition-colors motion-reduce:transition-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/60"
          >
            <svg aria-hidden="true" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Get Directions
          </a>
          <a
            href={SITE_CONTACT.phoneHref}
            class="inline-flex items-center gap-2 bg-white/10 border border-white/30 text-white font-bold px-6 py-3 rounded-sm hover:bg-white/20 motion-safe:transition-colors motion-reduce:transition-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/60"
          >
            <svg aria-hidden="true" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {SITE_CONTACT.phoneDisplay}
          </a>
        </div>
      </div>
    </section>

    <!-- Hours/Location -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4 text-center">
        <p class="text-stone-600">
          <strong class="text-brand-brown">Hours:</strong> {SITE_CONTACT.hours} &nbsp;|&nbsp;
          <strong class="text-brand-brown">Location:</strong> {SITE_CONTACT.addressLines.join(", ")}
        </p>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
