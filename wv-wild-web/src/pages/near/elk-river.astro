---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import SchemaBreadcrumb from '../../components/seo/SchemaBreadcrumb.astro';

import { SITE_CONTACT } from '../../config/siteContact';
import AdventureFeatureSection from '../../components/adventure/AdventureFeatureSection.astro';
import AdventureWhatToHunt from '../../components/adventure/AdventureWhatToHunt.astro';
import AdventureWhatToFish from '../../components/adventure/AdventureWhatToFish.astro';
import AdventureCampingList from '../../components/adventure/AdventureCampingList.astro';
import AdventureAmenitiesGrid from '../../components/adventure/AdventureAmenitiesGrid.astro';
import AdventureCTA from '../../components/adventure/AdventureCTA.astro';
import type { CampingFacility } from '../../types/adventure';

// Place schema for geographic SEO
// GPS: Approximate center of Elk River WMA, east of Sutton
const placeSchema = {
  "@context": "https://schema.org",
  "@type": "Place",
  "name": "Elk River Wildlife Management Area",
  "description": "Nearly 20,000 acres of public hunting land in Braxton County, West Virginia. 15 minutes from WV Wild Outdoors.",
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 38.6833,
    "longitude": -80.5833
  },
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Airport Rd & Bee Run Rd",
    "addressLocality": "Sutton",
    "addressRegion": "WV",
    "postalCode": "26601",
    "addressCountry": "US"
  }
};

// Breadcrumb schema data (3-level: Home → Hunt Near Us → Elk River WMA)
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Hunt Near Us', url: '/near/' },
  { name: 'Elk River WMA', url: '/near/elk-river/' }
];

// Hunting species data for AdventureWhatToHunt component
const huntingFeatures = [
  {
    title: 'White-tailed Deer',
    description: 'Brushlands and mixed timber provide excellent deer hunting here. Buck firearms season runs November through December. Archery opens in late September.',
    notes: 'Brushland edges and regenerating cuts. Creek bottoms when the rut kicks in. Wind can be tricky in the steep terrain — play it carefully.'
  },
  {
    title: 'Wild Turkey',
    description: 'The mature hardwood forests make turkey hunting particularly good here. Spring gobbler season brings birds working the ridges at dawn.',
    notes: 'Ridge tops in mature timber for roosting birds. Old logging roads and field edges for strutting.'
  },
  {
    title: 'Small Game',
    description: 'Squirrel hunting is excellent in the mature hardwoods — all that oak and hickory produces good mast. Grouse in the younger timber, plus dove and woodcock.',
    notes: 'Oak flats for squirrel. Regenerating cuts and creek edges for grouse.'
  },
  {
    title: 'Waterfowl',
    description: 'Habitat improvements have increased waterfowl potential. The area borders Sutton Lake and has multiple water sources throughout.',
    notes: 'Beaver ponds and backwaters. Sutton Lake edges during migration.'
  },
  {
    title: 'Black Bear',
    description: 'Braxton County is in West Virginia\'s bear zone. The mature hardwoods and thick cover provide good habitat. Multiple seasons run mid-September through December.',
    notes: 'Bear Damage Stamp required in addition to hunting license. Check <a href="https://wvdnr.gov/frequently-asked-questions/black-bear-seasons-regulations/" target="_blank" rel="noopener noreferrer" class="text-sign-green hover:underline">WV DNR bear regulations</a> for current season dates and zone rules.'
  }
];

// Fishing waters data
const fishingWaters = [
  {
    name: 'Elk River & Holly River',
    description: 'Good smallmouth bass fishing in the river sections running through the WMA. Also largemouth, spotted bass, and channel catfish. Bring waders for creek fishing.',
    species: 'Smallmouth bass, largemouth bass, spotted bass, channel catfish, trout'
  },
  {
    name: 'Sutton Lake & Tailwaters',
    description: 'The WMA borders Sutton Lake — good for bass, crappie, walleye, and muskie. Multiple access points along the lake edges within the management area. The tailwaters below the dam are stocked with trout from February through May.',
    species: 'Largemouth bass, crappie, bluegill, walleye, muskellunge, stocked trout (tailwaters)',
    note: '<strong>Trout stocking:</strong> Check the <a href="https://wvdnr.gov/fishing/fish-stocking/" target="_blank" rel="noopener noreferrer" class="text-sign-green hover:underline">WV DNR stocking schedule</a> for dates.'
  }
];

// Fishing features for AdventureWhatToFish component
const fishingFeatures = [
  {
    title: 'Elk River & Holly River',
    description: 'Good smallmouth bass fishing in the river sections running through the WMA. Also largemouth, spotted bass, and channel catfish. Bring waders for creek fishing.',
    notes: 'Species: Smallmouth bass, largemouth bass, spotted bass, channel catfish, trout',
  },
  {
    title: 'Sutton Lake & Tailwaters',
    description: 'The WMA borders Sutton Lake — good for bass, crappie, walleye, and muskie. Multiple access points along the lake edges within the management area. The tailwaters below the dam are stocked with trout from February through May.',
    notes: 'Species: Largemouth bass, crappie, bluegill, walleye, muskellunge, stocked trout (tailwaters). Trout stocking: Check the WV DNR stocking schedule for dates.',
  },
];

// Facilities data for AdventureCampingList (SPEC-12: T-017)
const facilities: CampingFacility[] = [
  {
    type: 'Camping Sites',
    count: 240,
    description: 'Tent and trailer sites available. Mix of primitive and improved sites with electric hookups. Open year-round.',
  },
  {
    type: 'Primitive Camping',
    count: 12,
    description: 'Backcountry sites for hunters. First-come, first-served.',
  },
  {
    type: 'Shooting Ranges',
    count: 2,
    description: '100-yard and 175-yard rifle ranges. Open dawn to dusk.',
  },
  {
    type: 'Accessible Areas',
    description: 'Class-Q accessible areas throughout the WMA.',
    accessibility: 'Multiple accessible hunting and fishing areas available',
  },
  {
    type: 'Resources',
    description: 'Download maps, check trout stocking schedules, and access WV DNR resources for Elk River WMA.',
    link: 'https://wvdnr.gov/varying-habitat-makes-elk-river-wma-a-great-place-to-hunt/',
  },
];
---

<Layout
  title="Elk River WMA Hunting & Fishing Guide | WV Wild Outdoors"
  description="Hunting and fishing guide for Elk River Wildlife Management Area. Nearly 20,000 acres of public land, 15 minutes from our shop. Deer, turkey, smallmouth bass, and more."
  additionalSchemas={[placeSchema]}
>
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  <SchemaBreadcrumb items={breadcrumbItems} />

  <main class="bg-brand-cream min-h-screen">

    <!-- Hero -->
    <section class="bg-brand-brown text-white py-16 md:py-24 relative overflow-hidden">
      <div class="absolute inset-0 bg-camo opacity-5 pointer-events-none"></div>

      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="inline-block bg-sign-green text-white px-4 py-1 rounded-sm font-bold text-sm">
              15 min from shop
            </span>
            <span class="inline-block bg-brand-orange text-white px-4 py-1 rounded-sm font-bold text-sm">
              19,646 Acres
            </span>
          </div>
          <h1 class="font-display font-black text-4xl md:text-6xl mb-4">
            Elk River WMA
          </h1>
          <p class="text-xl md:text-2xl text-brand-cream/80 mb-6">
            West Virginia's oldest wildlife management area. Nearly 20,000 acres of
            mature hardwoods, steep ridges, and plenty of deer and turkey.
          </p>
          <p class="text-brand-cream/60">
            Stop by the shop before you head out — we'll get you set up with licenses, ammo, and local tips.
          </p>
        </div>
      </div>
    </section>

    <!-- Quick Info -->
    <section class="py-8 bg-white border-b border-brand-brown/15">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div>
            <span class="block text-2xl font-bold text-brand-brown">19,646</span>
            <span class="text-sm text-brand-brown/60">Acres</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">15 min</span>
            <span class="text-sm text-brand-brown/60">From Shop</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">Braxton Co.</span>
            <span class="text-sm text-brand-brown/60">Location</span>
          </div>
          <div>
            <span class="block text-2xl font-bold text-brand-brown">Year-Round</span>
            <span class="text-sm text-brand-brown/60">Access</span>
          </div>
        </div>
      </div>
    </section>

    <!-- What to Hunt -->
    <AdventureWhatToHunt features={huntingFeatures} />

    <!-- What to Fish -->
    <AdventureWhatToFish
      title="Fishing Waters"
      features={fishingFeatures}
      variant="white"
    />

    <!-- Getting There -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-8">
            Getting There
          </h2>

          <div class="bg-white p-6 rounded-sm border-l-4 border-sign-green mb-6">
            <h3 class="font-bold text-brand-brown mb-2">From Our Shop</h3>
            <ol class="text-brand-brown/75 space-y-2 list-decimal list-inside">
              <li>Head north on US-19 toward Sutton</li>
              <li>Turn east on WV-17 (about 3.7 miles southeast of Sutton)</li>
              <li>Follow DNR signs to Elk River section</li>
              <li>About 15 minutes total drive time</li>
            </ol>
          </div>

          <div class="bg-white p-6 rounded-sm border-l-4 border-brand-orange">
            <h3 class="font-bold text-brand-brown mb-2">From I-79</h3>
            <ol class="text-brand-brown/75 space-y-2 list-decimal list-inside">
              <li>Take Exit 67 (Flatwoods)</li>
              <li>Follow WV-4 south about 2 miles to WV-19/40</li>
              <li>Turn east on WV-17, follow DNR signs</li>
              <li>Stop by our shop on your way — we're at Exit 57 on US-19</li>
            </ol>
          </div>

          <p class="mt-6 text-sm text-brand-brown/60">
            Multiple access points throughout the WMA. Holly River section accessible via Secondary Route 15.
            DNR office: (304) 924-6211
          </p>
        </div>
      </div>
    </section>

    <!-- Facilities (SPEC-12: T-017) -->
    <AdventureCampingList
      title="Facilities"
      facilities={facilities}
      columns={3}
      variant="white"
    />

    <!-- What to Bring -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown mb-4">
            What to Bring
          </h2>
          <p class="text-brand-brown/75 mb-8">
            We've got most of this in stock. Stop by before you head out.
          </p>

          <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">For Deer Hunting</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Rifle and appropriate ammo
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Blaze orange (500 sq in required)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  WV hunting license + deer stamp
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Knife and game bags
                </li>
              </ul>
            </div>

            <div class="bg-white p-6 rounded-sm border border-brand-brown/15">
              <h3 class="font-bold text-brand-brown mb-3">For Turkey Hunting</h3>
              <ul class="space-y-2 text-brand-brown/75 text-sm">
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Shotgun + turkey loads
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Full camo (head to toe)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  Turkey calls (box/slate/diaphragm)
                </li>
                <li class="flex items-center gap-2">
                  <svg aria-hidden="true" focusable="false" class="w-4 h-4 text-sign-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  WV license + turkey stamp
                </li>
              </ul>
            </div>
          </div>

          <div class="mt-8 text-center">
            <a
              href="/shop"
              class="inline-flex items-center gap-2 bg-sign-green text-white font-bold px-6 py-3 rounded-sm hover:bg-sign-green/90 motion-safe:transition-colors motion-reduce:transition-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-orange"
            >
              Browse Our Gear
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <AdventureCTA
      heading="Stop By Before You Head Out"
      description="We're on your way. Grab your license, stock up on ammo, and we'll point you to the best spots on the WMA."
      primaryText="Get Directions to Shop"
      primaryHref={SITE_CONTACT.mapsUrl}
      primaryExternal
      showLocationIcon
      secondaryText={SITE_CONTACT.phoneDisplay}
      secondaryHref={SITE_CONTACT.phoneHref}
      showPhoneIcon
    />

    <!-- Newsletter -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-xl mx-auto">
          <EmailCapture
            variant="card"
            heading="Get Local Hunting Updates"
            subheading="Season reminders, what's hitting where, and gear restocks delivered to your inbox."
          />
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
