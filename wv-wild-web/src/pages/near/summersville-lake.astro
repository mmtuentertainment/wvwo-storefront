---
/**
 * Summersville Lake WMA Adventure Page
 * SPEC-13 T128: Refactored to use LakeTemplate component
 *
 * BEFORE: 364 lines with inline data and component composition
 * AFTER: ~80 lines with centralized data and template delegation
 *
 * Migration Benefits:
 * - Single source of truth for lake data (summersville.ts)
 * - Consistent layout and styling across all lake pages
 * - Easy content updates without touching component structure
 * - Preserved SEO and schema markup
 * - Maintained all breadcrumb functionality
 */

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import SchemaBreadcrumb from '../../components/seo/SchemaBreadcrumb.astro';
import LakeTemplate from '../../components/templates/LakeTemplate.astro';
import { summersvilleLakeData } from '../../data/lakes/summersville';

// Place schema for geographic SEO (preserved from original)
const placeSchema = {
  "@context": "https://schema.org",
  "@type": "Place",
  "name": "Summersville Lake Wildlife Management Area",
  "description": "5,974-acre WMA with 2,790-acre lake known as the 'Little Bahamas of the East.' Crystal clear water with 20-45 feet visibility, world-class smallmouth fishing, scuba diving, and hunting for deer, turkey, and bear. 30 minutes from WV Wild Outdoors.",
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": summersvilleLakeData.coordinates?.lat || 38.2217,
    "longitude": summersvilleLakeData.coordinates?.lng || -80.9097
  },
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "2981 Summersville Lake Road",
    "addressLocality": "Summersville",
    "addressRegion": "WV",
    "postalCode": "26651",
    "addressCountry": "US"
  },
  "containedInPlace": {
    "@type": "City",
    "name": "Summersville",
    "address": { "addressRegion": "WV" }
  },
  "amenityFeature": [
    { "@type": "LocationFeatureSpecification", "name": "Hunting", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Fishing", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Boat Ramps", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Camping", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Scuba Diving", "value": true },
    { "@type": "LocationFeatureSpecification", "name": "Swimming", "value": true }
  ]
};

// Breadcrumb schema data (preserved from original)
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Hunt Near Us', url: '/near/' },
  { name: 'Summersville Lake WMA', url: '/near/summersville-lake/' }
];
---

<Layout
  title="Summersville Lake WMA Hunting & Fishing Guide | WV Wild Outdoors"
  description="Complete guide to Summersville Lake WMA. 5,974 acres with 2,790-acre lake - the 'Little Bahamas of the East.' World-class smallmouth fishing, muskie, scuba diving, plus deer, turkey, and bear hunting. 30 minutes from our shop."
  additionalSchemas={[placeSchema]}
>
  <Header />
  <Breadcrumb items={breadcrumbItems} />
  <SchemaBreadcrumb items={breadcrumbItems} />

  {/*
    LakeTemplate handles all content sections:
    - Hero with quick stats
    - Fishing spots (What to Fish + Where to Fish)
    - Marina & boat access
    - Activities (hunting, diving, swimming)
    - Seasonal fishing guide
    - Regulations & safety
    - Gear checklist
    - Related shop categories
    - CTA
  */}
  <LakeTemplate {...summersvilleLakeData} />

  {/* Newsletter signup preserved from original */}
  <section class="py-12 md:py-16 bg-brand-cream">
    <div class="container mx-auto px-4">
      <div class="max-w-xl mx-auto">
        <EmailCapture
          variant="card"
          heading="Get Fishing & Lake Updates"
          subheading="What's biting, campground openings, and gear restocks delivered to your inbox."
        />
      </div>
    </div>
  </section>

  <Footer />
</Layout>
