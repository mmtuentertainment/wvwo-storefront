// Amenities
const amenities: Amenity[] = [
  { name: 'Battle Run Boat Ramp', icon: 'boat', description: 'Paved, accessible' },
  { name: 'Salmon Run Boat Ramp', icon: 'boat', description: 'Public access' },
  { name: 'Long Point Boat Ramp', icon: 'boat', description: 'Public access' },
  { name: 'Summersville Lake Marina', icon: 'anchor', description: 'Kayak & pontoon rentals' },
  { name: 'Battle Run Beach', icon: 'water', description: 'Swimming area' },
  { name: 'Sarge\'s Dive Shop', icon: 'mask', description: 'Scuba gear & certification' },
