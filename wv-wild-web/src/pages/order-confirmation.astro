---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { OrderConfirmation as OrderConfirmationUI } from '../components/checkout';

// Feature flag: E-commerce UI (cart, checkout, order confirmation)
const commerceEnabled = import.meta.env.PUBLIC_COMMERCE_ENABLED === 'true';

// Redirect to shop if commerce is disabled (consistent with checkout.astro)
if (!commerceEnabled) {
  return Astro.redirect('/shop', 307);
}
---

<Layout
  title="Order Confirmed | WV Wild Outdoors"
  description="Thank you for your order from WV Wild Outdoors. Your order has been confirmed."
>
  <Header />

  <main class="bg-brand-cream min-h-screen py-8">
    <OrderConfirmationUI client:load />
  </main>

  <Footer />
</Layout>
