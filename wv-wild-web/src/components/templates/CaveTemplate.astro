---
/**
 * CaveTemplate.astro
 * SPEC-16: Cave/Cavern Template Component
 *
 * Comprehensive template for West Virginia cave and cavern destination pages with tour
 * information, geological formations, accessibility requirements, and visitor safety.
 *
 * USER STORIES IMPLEMENTED:
 * - Highway Hunters (I-79/US-19): Tour options with duration, difficulty, pricing
 * - Family Planners: Physical requirements and accessibility upfront
 * - Education-Focused Visitors: Geological formations and cave history
 * - Kim's Tips: Insider local knowledge callouts
 *
 * WVWO COMPLIANCE:
 * - Fonts: font-display (headings), font-hand (Kim's tips ONLY), font-body (content)
 * - Colors: brand-brown, sign-green, brand-cream, brand-orange (<5% of screen)
 * - Borders: rounded-sm ONLY (no other border-radius values allowed)
 * - Tour Colors: Easy (green), Moderate (brown), Strenuous (orange), Wild (red)
 *
 * @module components/templates/CaveTemplate
 */

import type {
  CaveTemplateProps,
  CaveTour,
  CaveFormation,
  CavePricing,
  CaveHours,
  TourDifficulty,
  FormationType,
} from '../../types/cave-types';
import {
  getTourDifficultyColor,
  getTourDifficultyBadge,
  TOUR_DIFFICULTY_LABELS,
  getFormationTypeLabel as getFormationLabel,
} from '../../types/cave-types';
import type { NearbyAttraction } from '../../types/adventure';
import AdventureGearChecklist from '../adventure/AdventureGearChecklist.astro';
import AdventureRelatedShop from '../adventure/AdventureRelatedShop.astro';
import AdventureCTA from '../adventure/AdventureCTA.astro';

interface Props extends CaveTemplateProps {}
const props: Props = Astro.props;
const {
  name,
  image,
  imageAlt,
  tagline,
  description,
  location,
  county,
  depth,
  temperature,
  discoveryYear,
  quickHighlights,
  tours,
  formations,
  conditions,
  accessibility,
  pricing,
  hours,
  safety,
  history,
  gearList,
  relatedShop,
  nearbyAttractions,
  bookingUrl,
  websiteUrl,
} = props;

/**
 * Helper function wrappers using imported typed functions from cave-types.ts
 * These provide border color classes (imported functions return badge colors)
 */
function getTourBorderColor(difficulty: TourDifficulty): string {
  return getTourDifficultyColor(difficulty);
}

function getTourBadgeColor(difficulty: TourDifficulty): string {
  return getTourDifficultyBadge(difficulty);
}

function getDifficultyLabel(difficulty: TourDifficulty): string {
  return TOUR_DIFFICULTY_LABELS[difficulty];
}

function getFormationTypeLabel(type: FormationType): string {
  return getFormationLabel(type);
}

/**
 * Check if URL is external.
 */
function isExternalLink(href: string): boolean {
  return href.startsWith('http://') || href.startsWith('https://');
}
---

<!-- ============================================================================
     SECTION 1: HERO (~45 lines)
     ============================================================================ -->
<section
  class="relative h-[70vh] min-h-[500px] overflow-hidden"
  aria-label={`${name} hero section`}
>
  <!-- Hero Image -->
  <img
    src={image}
    alt={imageAlt}
    class="absolute inset-0 w-full h-full object-cover"
    loading="eager"
  />

  <!-- Dark Overlay for Text Readability -->
  <div class="absolute inset-0 bg-brand-brown/50" aria-hidden="true"></div>

  <!-- Hero Content -->
  <div class="relative h-full container mx-auto px-4">
    <div class="h-full flex flex-col justify-end pb-16">
      <!-- Cave Name -->
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        {name}
      </h1>

      <!-- Location & County -->
      <p class="font-body text-lg text-brand-cream mb-4">
        {location} &bull; {county} County
      </p>

      <!-- Tagline -->
      {tagline && (
        <p class="font-body text-xl md:text-2xl text-white mb-6 max-w-2xl">
          {tagline}
        </p>
      )}

      <!-- Cave Stats Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6 max-w-xl">
        <div class="bg-white/95 p-4 rounded-sm text-center">
          <p class="font-display text-2xl font-bold text-brand-brown">{depth}'</p>
          <p class="font-body text-xs text-brand-mud uppercase tracking-wide">Depth</p>
        </div>
        <div class="bg-white/95 p-4 rounded-sm text-center">
          <p class="font-display text-2xl font-bold text-brand-brown">{temperature}</p>
          <p class="font-body text-xs text-brand-mud uppercase tracking-wide">Year-Round</p>
        </div>
        {discoveryYear && (
          <div class="bg-white/95 p-4 rounded-sm text-center">
            <p class="font-display text-2xl font-bold text-brand-brown">{discoveryYear}</p>
            <p class="font-body text-xs text-brand-mud uppercase tracking-wide">Discovered</p>
          </div>
        )}
        <div class="bg-white/95 p-4 rounded-sm text-center">
          <p class="font-display text-2xl font-bold text-brand-brown">{tours.length}</p>
          <p class="font-body text-xs text-brand-mud uppercase tracking-wide">Tours</p>
        </div>
      </div>

      <!-- Quick Highlights Badges -->
      {quickHighlights && quickHighlights.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {quickHighlights.map((highlight: string) => (
            <span class="bg-sign-green text-white px-3 py-1 rounded-sm font-body text-sm font-medium">
              {highlight}
            </span>
          ))}
        </div>
      )}
    </div>
  </div>
</section>


<!-- ============================================================================
     SECTION 2: DESCRIPTION PROSE (~15 lines)
     ============================================================================ -->
<section class="bg-brand-cream py-12">
  <div class="container mx-auto px-4">
    <p class="font-body text-lg text-brand-mud leading-relaxed max-w-4xl mx-auto text-center">
      {description}
    </p>
  </div>
</section>


<!-- ============================================================================
     SECTION 3: TOUR INFORMATION (~70 lines)
     ============================================================================ -->
<section class="py-16 bg-white" aria-labelledby="tours-heading">
  <div class="container mx-auto px-4">
    <h2
      id="tours-heading"
      class="font-display text-3xl md:text-4xl font-bold text-brand-brown mb-8 text-center"
    >
      Tour Options
    </h2>

    {tours.length > 0 ? (
      <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-6">
        {tours.map((tour: CaveTour) => (
          <div class={`bg-brand-cream p-6 rounded-sm border-l-4 ${getTourBorderColor(tour.difficulty)}`}>
            <!-- Tour Header -->
            <div class="flex justify-between items-start mb-4">
              <h3 class="font-display text-xl font-bold text-brand-brown">
                {tour.name}
              </h3>
              <span class={`${getTourBadgeColor(tour.difficulty)} px-3 py-1 rounded-sm font-body text-sm font-bold`}>
                {getDifficultyLabel(tour.difficulty)}
              </span>
            </div>

            <!-- Tour Details -->
            <div class="grid grid-cols-2 gap-3 mb-4">
              <div>
                <p class="font-body text-sm text-brand-mud uppercase tracking-wide">Duration</p>
                <p class="font-body font-medium text-brand-brown">{tour.duration}</p>
              </div>
              {tour.distance && (
                <div>
                  <p class="font-body text-sm text-brand-mud uppercase tracking-wide">Distance</p>
                  <p class="font-body font-medium text-brand-brown">{tour.distance}</p>
                </div>
              )}
              {tour.stairs && (
                <div>
                  <p class="font-body text-sm text-brand-mud uppercase tracking-wide">Stairs</p>
                  <p class="font-body font-medium text-brand-brown">~{tour.stairs}</p>
                </div>
              )}
              {tour.groupSize && (
                <div>
                  <p class="font-body text-sm text-brand-mud uppercase tracking-wide">Group Size</p>
                  <p class="font-body font-medium text-brand-brown">{tour.groupSize}</p>
                </div>
              )}
            </div>

            <!-- Tour Highlights -->
            {tour.highlights && tour.highlights.length > 0 && (
              <div class="mb-4">
                <p class="font-body text-sm text-brand-mud uppercase tracking-wide mb-2">Highlights</p>
                <ul class="flex flex-wrap gap-2">
                  {tour.highlights.map((highlight: string) => (
                    <li class="bg-white px-2 py-1 rounded-sm font-body text-sm text-brand-mud">
                      {highlight}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Age/Reservation Requirements -->
            <div class="flex flex-wrap gap-4 text-sm">
              {tour.ageMinimum && (
                <span class="font-body text-brand-mud">
                  Age: {tour.ageMinimum}+
                </span>
              )}
              {tour.reservationRequired && (
                <span class="font-body text-brand-orange font-medium">
                  Reservation Required
                </span>
              )}
            </div>

            {/* Seasonal Notes */}
            {tour.seasonalNotes && (
              <p class="mt-3 font-body text-sm text-brand-mud italic">
                {tour.seasonalNotes}
              </p>
            )}
          </div>
        ))}
      </div>
    ) : (
      <p class="font-body text-center text-brand-mud">
        Contact {name} directly for tour information.
      </p>
    )}

    <!-- Booking Disclaimer -->
    {bookingUrl && (
      <aside
        class="mt-8 max-w-3xl mx-auto p-5 bg-brand-cream border-l-4 border-brand-orange rounded-sm"
        role="note"
        aria-label="Third-party booking notice"
      >
        <div class="flex items-start gap-4">
          <!-- Info Icon -->
          <svg
            class="w-6 h-6 text-brand-orange flex-shrink-0 mt-0.5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>

          <div>
            <p class="font-display text-lg font-bold text-brand-brown">
              Book Directly with {name}
            </p>
            <p class="font-body text-sm text-brand-mud mt-1">
              Tours and tickets are handled by {name}, not WV Wild Outdoors.
              We're here to help you find great adventures and gear up for your trip.
            </p>

            <a
              href={bookingUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 mt-4 bg-brand-orange text-white px-5 py-2.5 rounded-sm font-body font-bold hover:bg-brand-orange/90 motion-safe:transition-colors motion-reduce:transition-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-orange focus-visible:ring-offset-2"
            >
              Book Tour on Official Site
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </aside>
    )}
  </div>
</section>


<!-- ============================================================================
     SECTION 4: NOTABLE FORMATIONS (~50 lines)
     ============================================================================ -->
{formations && formations.length > 0 && (
  <section class="py-16 bg-brand-cream" aria-labelledby="formations-heading">
    <div class="container mx-auto px-4">
      <h2
        id="formations-heading"
        class="font-display text-3xl md:text-4xl font-bold text-brand-brown mb-8 text-center"
      >
        Notable Formations
      </h2>

      <div class="max-w-6xl mx-auto grid lg:grid-cols-3 md:grid-cols-2 gap-6">
        {formations.map((formation: CaveFormation) => (
          <div class="bg-white p-6 rounded-sm border-l-4 border-brand-brown">
            <!-- Formation Header -->
            <div class="mb-3">
              <span class="font-body text-sm text-sign-green font-medium">
                {formation.typeDisplay || getFormationTypeLabel(formation.type)}
              </span>
              <h3 class="font-display text-xl font-bold text-brand-brown mt-1">
                {formation.name}
              </h3>
            </div>

            <!-- Description -->
            <p class="font-body text-brand-mud text-sm leading-relaxed mb-3">
              {formation.description}
            </p>

            <!-- Optional Metadata -->
            {formation.ageEstimate && (
              <p class="font-body text-xs text-brand-mud mb-2">
                <span class="font-medium">Age:</span> {formation.ageEstimate}
              </p>
            )}
            {formation.dimensions && (
              <p class="font-body text-xs text-brand-mud mb-2">
                <span class="font-medium">Size:</span> {formation.dimensions}
              </p>
            )}

            <!-- Fun Fact (Educational, neutral voice) -->
            {formation.funFact && (
              <p class="font-body text-sm text-brand-brown mt-3 italic">
                "{formation.funFact}"
              </p>
            )}

            <!-- Kim's Note (Personal voice) -->
            {formation.kimNote && (
              <aside class="mt-3 p-3 bg-brand-cream rounded-sm" role="note">
                <p class="font-hand text-sm text-brand-mud">
                  {formation.kimNote}
                </p>
              </aside>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}


<!-- ============================================================================
     SECTION 5: CONDITIONS & PREPARATION (~45 lines)
     ============================================================================ -->
<section class="py-16 bg-white" aria-labelledby="conditions-heading">
  <div class="container mx-auto px-4">
    <h2
      id="conditions-heading"
      class="font-display text-3xl md:text-4xl font-bold text-brand-brown mb-8 text-center"
    >
      Cave Conditions & Preparation
    </h2>

    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8">
      <!-- Conditions Column -->
      <div class="bg-brand-cream p-6 rounded-sm border-l-4 border-sign-green">
        <h3 class="font-display text-xl font-bold text-brand-brown mb-4">
          Cave Conditions
        </h3>

        <div class="space-y-3">
          <div>
            <p class="font-body text-sm text-brand-mud uppercase tracking-wide">Temperature</p>
            <p class="font-display text-xl font-bold text-brand-brown">{conditions.temperature}</p>
          </div>
          {conditions.humidity && (
            <div>
              <p class="font-body text-sm text-brand-mud uppercase tracking-wide">Humidity</p>
              <p class="font-body font-medium text-brand-brown">{conditions.humidity}</p>
            </div>
          )}
        </div>

        <!-- What to Wear -->
        {conditions.whatToWear && conditions.whatToWear.length > 0 && (
          <div class="mt-6">
            <h4 class="font-display text-lg font-bold text-brand-brown mb-3">What to Wear</h4>
            <ul class="space-y-2">
              {conditions.whatToWear.map((item: string) => (
                <li class="font-body text-sm text-brand-mud flex items-start gap-2">
                  <span class="text-sign-green font-bold" aria-hidden="true">&#10003;</span>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>

      <!-- What to Bring Column -->
      <div class="bg-brand-cream p-6 rounded-sm border-l-4 border-sign-green">
        <h3 class="font-display text-xl font-bold text-brand-brown mb-4">
          What to Bring
        </h3>

        {conditions.whatToBring && conditions.whatToBring.length > 0 && (
          <ul class="space-y-2">
            {conditions.whatToBring.map((item: string) => (
              <li class="font-body text-sm text-brand-mud flex items-start gap-2">
                <span class="text-brand-brown" aria-hidden="true">&bull;</span>
                {item}
              </li>
            ))}
          </ul>
        )}
      </div>
    </div>
  </div>
</section>


<!-- ============================================================================
     SECTION 6: ACCESSIBILITY (~55 lines)
     ============================================================================ -->
<section class="py-16 bg-brand-cream" aria-labelledby="accessibility-heading">
  <div class="container mx-auto px-4">
    <h2
      id="accessibility-heading"
      class="font-display text-3xl md:text-4xl font-bold text-brand-brown mb-8 text-center"
    >
      Accessibility & Physical Requirements
    </h2>

    <div class="max-w-5xl mx-auto bg-white p-6 md:p-8 rounded-sm border-l-4 border-brand-orange">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Physical Requirements Column -->
        <div>
          <h3 class="font-display text-xl font-bold text-brand-brown mb-4">
            Physical Requirements
          </h3>
          {accessibility.physicalRequirements && accessibility.physicalRequirements.length > 0 && (
            <ul class="space-y-2">
              {accessibility.physicalRequirements.map((req: string) => (
                <li class="font-body text-sm text-brand-mud flex items-start gap-2">
                  <span class="text-brand-brown" aria-hidden="true">&bull;</span>
                  {req}
                </li>
              ))}
            </ul>
          )}
        </div>

        <!-- Limitations Column -->
        <div>
          <h3 class="font-display text-xl font-bold text-brand-brown mb-4">
            Limitations
          </h3>
          {accessibility.limitations && accessibility.limitations.length > 0 && (
            <ul class="space-y-2">
              {accessibility.limitations.map((limitation: string) => (
                <li class="font-body text-sm text-brand-mud flex items-start gap-2">
                  <span class="text-brand-orange" aria-hidden="true">&#10007;</span>
                  {limitation}
                </li>
              ))}
            </ul>
          )}
        </div>
      </div>

      <!-- Accommodations (conditional) -->
      {accessibility.accommodations && accessibility.accommodations.length > 0 && (
        <div class="mt-8 pt-6 border-t border-brand-brown/10">
          <h3 class="font-display text-lg font-bold text-brand-brown mb-3">
            Accommodations Available
          </h3>
          <ul class="flex flex-wrap gap-3">
            {accessibility.accommodations.map((accommodation: string) => (
              <li class="bg-brand-cream px-3 py-1.5 rounded-sm font-body text-sm text-brand-mud">
                {accommodation}
              </li>
            ))}
          </ul>
        </div>
      )}

      <!-- Medical Disclaimer (conditional) -->
      {accessibility.medicalDisclaimer && (
        <aside class="mt-6 p-4 bg-brand-cream rounded-sm" role="note">
          <p class="font-body text-sm text-brand-mud italic">
            <strong class="text-brand-brown not-italic">Medical Note:</strong> {accessibility.medicalDisclaimer}
          </p>
        </aside>
      )}

      <!-- Waiver Required Notice -->
      {accessibility.waiverRequired && (
        <p class="mt-4 font-body text-sm text-brand-orange font-medium">
          A signed waiver is required for all tour participants.
        </p>
      )}
    </div>
  </div>
</section>


<!-- ============================================================================
     SECTION 7: PRICING & HOURS (~50 lines)
     ============================================================================ -->
<section class="py-16 bg-white" aria-labelledby="pricing-hours-heading">
  <div class="container mx-auto px-4">
    <h2
      id="pricing-hours-heading"
      class="font-display text-3xl md:text-4xl font-bold text-brand-brown mb-8 text-center"
    >
      Pricing & Hours
    </h2>

    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8">
      <!-- Pricing Column -->
      <div class="bg-brand-cream p-6 rounded-sm border-l-4 border-sign-green">
        <h3 class="font-display text-xl font-bold text-brand-brown mb-4">
          Tour Pricing
        </h3>
        {pricing && pricing.length > 0 && (
          <div class="space-y-3">
            {pricing.map((priceItem: CavePricing) => (
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-body font-medium text-brand-brown">{priceItem.tier}</p>
                  {priceItem.notes && (
                    <p class="font-body text-xs text-brand-mud">{priceItem.notes}</p>
                  )}
                </div>
                <p class="font-display text-lg font-bold text-brand-brown">{priceItem.price}</p>
              </div>
            ))}
          </div>
        )}

        {/* External pricing link with disclaimer */}
        {websiteUrl && (
          <div class="mt-6 pt-4 border-t border-brand-brown/10">
            <p class="font-body text-xs text-brand-mud mb-2">
              Prices may vary. Check official website for current rates.
            </p>
            <a
              href={websiteUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sign-green font-body text-sm font-medium hover:underline"
            >
              View Current Prices
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        )}
      </div>

      <!-- Hours Column -->
      <div class="bg-brand-cream p-6 rounded-sm border-l-4 border-brand-brown">
        <h3 class="font-display text-xl font-bold text-brand-brown mb-4">
          Hours of Operation
        </h3>
        {hours && hours.length > 0 && (
          <div class="space-y-4">
            {hours.map((hoursItem: CaveHours) => (
              <div>
                <p class="font-body font-medium text-brand-brown">{hoursItem.season}</p>
                <p class="font-body text-sm text-brand-mud">{hoursItem.days}: {hoursItem.hours}</p>
                {hoursItem.notes && (
                  <p class="font-body text-xs text-brand-mud italic">{hoursItem.notes}</p>
                )}
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>


<!-- ============================================================================
     SECTION 8: SAFETY GUIDELINES (~45 lines)
     ============================================================================ -->
<section class="py-16 bg-brand-cream" aria-labelledby="safety-heading">
  <div class="container mx-auto px-4">
    <h2
      id="safety-heading"
      class="font-display text-3xl md:text-4xl font-bold text-brand-brown mb-8 text-center"
    >
      Safety Guidelines
    </h2>

    <div class="max-w-4xl mx-auto bg-white p-6 md:p-8 rounded-sm border-l-4 border-brand-orange">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Rules Column -->
        <div>
          <h3 class="font-display text-lg font-bold text-brand-brown mb-4">
            Cave Rules
          </h3>
          {safety.rules && safety.rules.length > 0 && (
            <ul class="space-y-2">
              {safety.rules.map((rule: string) => (
                <li class="font-body text-sm text-brand-mud flex items-start gap-2">
                  <span class="text-brand-brown" aria-hidden="true">&bull;</span>
                  {rule}
                </li>
              ))}
            </ul>
          )}
        </div>

        <!-- Prohibited Items Column -->
        <div>
          <h3 class="font-display text-lg font-bold text-brand-brown mb-4">
            Prohibited Items
          </h3>
          {safety.prohibited && safety.prohibited.length > 0 && (
            <ul class="space-y-2">
              {safety.prohibited.map((item: string) => (
                <li class="font-body text-sm text-red-800 flex items-start gap-2">
                  <span aria-hidden="true">&#10007;</span>
                  {item}
                </li>
              ))}
            </ul>
          )}
        </div>
      </div>

      <!-- Emergency Contact (conditional) -->
      {safety.emergencyContact && (
        <div class="mt-8 pt-6 border-t border-brand-brown/10">
          <h3 class="font-display text-lg font-bold text-brand-brown mb-2">
            Emergency Contact
          </h3>
          <p class="font-body text-sm text-brand-mud mb-3">
            In case of emergency during your cave visit:
          </p>
          <a
            href={`tel:${safety.emergencyContact.replace(/[^0-9+]/g, '')}`}
            class="inline-flex items-center gap-3 font-display text-2xl font-bold text-brand-orange hover:underline focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-orange focus-visible:ring-offset-2"
          >
