---
import { SITE_CONTACT } from '../config/siteContact';
---

<section id="visit" class="max-w-7xl mx-auto px-4 py-12 md:py-24">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Left Column: Text & Hours -->
    <div class="space-y-8">
      <div>
        <h2 class="text-brand-brown font-display font-bold text-4xl md:text-5xl mb-4">
          Visit WV Wild Outdoors
        </h2>
        <p class="text-brand-mud/80 text-lg font-body leading-relaxed max-w-prose">
          Drop by our shop in Birch River, WV to get ready for your next season in the woods, on the farm, or in the garden.
        </p>
      </div>

      <div class="space-y-6">
        <div class="space-y-2">
            <h3 class="font-display text-2xl text-brand-brown">Location</h3>
            <div class="text-brand-mud font-body">
              <address class="not-italic">
                {SITE_CONTACT.addressLines.map((line) => (
                  <div>{line}</div>
                ))}
              </address>
              <p class="text-sm text-brand-mud/70 mt-2">
                {SITE_CONTACT.highway.interstate} {SITE_CONTACT.highway.exitName} Exit {SITE_CONTACT.highway.exit}
              </p>
            </div>
            <!-- Drive times from major cities -->
            <div class="mt-4 pt-4 border-t border-brand-mud/10">
              <p class="text-sm font-medium text-brand-brown mb-2">Drive times:</p>
              <ul class="text-sm text-brand-mud/80 space-y-1">
                {SITE_CONTACT.driveTimes.map((dt) => (
                  <li class="flex justify-between max-w-[200px]">
                    <span>{dt.city}</span>
                    <span class="text-brand-mud/60">{dt.time}</span>
                  </li>
                ))}
              </ul>
            </div>
        </div>

        <div class="space-y-2">
            <h3 class="font-display text-2xl text-brand-brown">Hours</h3>
            <ul class="text-brand-mud font-body space-y-1">
                <li>Mon–Sat: 10:00am–5:00pm</li>
                <li>Sun: Closed</li>
                <li class="italic text-brand-mud/85 text-sm mt-2">Call ahead for current hours</li>
            </ul>
        </div>
      </div>

      <div>
        <!-- Maps link (update SITE_CONTACT.mapsUrl when ready) -->
        <a href={SITE_CONTACT.mapsUrl} class="inline-flex items-center justify-center px-8 py-3 border-2 border-brand-brown text-brand-brown font-bold rounded-sm hover:bg-brand-brown hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-orange transition-colors">
            Open in Maps
        </a>
      </div>
    </div>

    <!-- Right Column: Map Area -->
    <div class="bg-brand-cream/50 border-2 border-brand-mud/10 rounded-sm min-h-[400px] flex items-center justify-center text-center p-8">
        <div class="space-y-4">
          <span class="text-brand-mud/80 font-display text-xl block">Map coming soon</span>
          <p class="text-brand-mud/85 font-body text-sm">Use the address above and "Open in Maps" button to find us.</p>
        </div>
    </div>
  </div>
</section>
