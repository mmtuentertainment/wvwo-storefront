---
import type { StoreData } from '../types/product';
import storeDataRaw from '../data/store.json';

const storeData = storeDataRaw as unknown as StoreData;
const { categories } = storeData;
---

<section id="shop" class="py-12 bg-brand-cream/30">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-display font-bold text-brand-brown mb-8 text-center">In Stock Now</h2>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {categories.map((cat) => (
        <a
          href={`/shop/${cat.slug}`}
          class="group block p-4 bg-brand-cream border-l-4 border-sign-green rounded-sm hover:border-brand-orange transition-all duration-300 hover:-translate-y-0.5"
        >
          <h3 class="font-display font-bold text-brand-brown group-hover:text-brand-orange transition-colors">
            {cat.name}
          </h3>
          <p class="font-hand text-brand-orange text-sm mt-1">{cat.tagline}</p>
        </a>
      ))}
    </div>

    <p class="text-center mt-8 text-brand-mud/60 italic font-hand text-xl">
      "If we don't have it, you probably don't need it."
    </p>
  </div>
</section>
