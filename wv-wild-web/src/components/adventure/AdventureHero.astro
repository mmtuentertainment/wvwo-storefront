---
/**
 * AdventureHero.astro
 * SPEC-09: Adventure Hero Component
 *
 * Full-bleed hero for adventure guides with 7/5 asymmetric grid layout.
 * Combines difficulty badges, responsive images, and 5-slot architecture.
 *
 * @accessibility
 * - aria-labelledby points to h1 element for section identification
 * - External links include "(opens in new tab)" sr-only text
 * - Badge container uses role="group" with aria-label
 * - Shape icons provide color-blind accessibility
 * - Reduced motion support disables all animations
 *
 * @performance
 * - Hero image uses fetchpriority="high" for LCP optimization
 * - Images use Astro's Image component for automatic optimization
 * - Zero JavaScript - pure CSS animations
 */
import { Image } from 'astro:assets';
import AdventureHeroBadge from './AdventureHeroBadge.astro';
import camoPattern from '../../assets/patterns/appalachian-woodland.svg';
import { formatAdventureDate } from '../../lib/utils/date-formatter';
import type { Difficulty, ImagePosition, SchemaType, Coordinates } from '../../types/adventure';
import { DIFFICULTY_LABELS } from '../../types/adventure';
import '../../styles/adventure-hero.css';

interface Props {
  // Required - Core Display
  /** Adventure destination name displayed as h1. Used for aria-labelledby. */
  title: string;
  /** Lead paragraph describing the adventure destination. */
  description: string;
  /** Trail difficulty level. Determines badge color and shape icon. */
  difficulty: Difficulty;
  /** Best season(s) to visit. Displayed as badge. */
  season: string;
  /** Drive time from WVWO shop. Displayed as badge with car icon when provided. */
  driveTime?: string;

  // Optional - Image (with fallback UI)
  /** Hero image metadata from Astro's image imports. */
  image?: ImageMetadata;
  /** Alt text for hero image. Required for accessibility when image provided. */
  imageAlt?: string;

  // Optional - Image Control
  /** Focal point for image cropping. Maps to CSS object-position. */
  imagePosition?: ImagePosition;
  /** Image loading strategy. Use 'eager' for above-fold heroes. */
  loading?: 'lazy' | 'eager';

  // Optional - SEO & Content
  /** ISO 8601 date when content was first published. */
  publishedDate?: string;
  /** ISO 8601 date when content was last updated. */
  updatedDate?: string;
  /** Geographic coordinates for Google Maps link. */
  coordinates?: Coordinates;
  /** Schema.org type for structured data. */
  schemaType?: SchemaType;
  /** URL-safe identifier for generating unique IDs. */
  slug?: string;
}

const {
  title,
  description,
  difficulty,
  season,
  driveTime,
  image,
  imageAlt = 'Adventure destination image',
  imagePosition = 'center',
  loading = 'eager',
  publishedDate,
  updatedDate,
  coordinates,
  schemaType: _schemaType = 'Place', // Passed to SchemaAdventureHero via schema-extra slot
  slug,
} = Astro.props;

// Generate unique ID for accessibility
const heroId = `adventure-hero-${slug || 'main'}`;
const componentId = slug || 'main';

// Map image position to object-position class
const imagePositionClass = {
  center: 'object-center',
  top: 'object-top',
  bottom: 'object-bottom',
}[imagePosition];

// Use centralized difficulty labels from types/adventure.ts
const difficultyLabel = DIFFICULTY_LABELS[difficulty];

// Check for slot content
const hasDefaultSlot = Astro.slots.has('default');
const hasCtaSlot = Astro.slots.has('cta');
const hasBadgeExtraSlot = Astro.slots.has('badge-extra');
const hasAsideSlot = Astro.slots.has('aside');
const hasSchemaExtraSlot = Astro.slots.has('schema-extra');
---

<section
  class="adventure-hero relative w-full overflow-hidden bg-brand-brown"
  aria-labelledby={heroId}
>
  <!-- Camo Pattern Overlay -->
  <div
    class="absolute inset-0 opacity-10 pointer-events-none"
    style={`background-image: url(${camoPattern.src}); background-repeat: repeat;`}
    role="presentation"
    aria-hidden="true"
  ></div>

  <!-- Main Grid Container -->
  <div class="relative max-w-7xl mx-auto px-4 py-12 lg:py-16">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">

      <!-- Image Column (First on mobile, second on desktop) -->
      <div class="order-1 lg:order-2 lg:col-span-5">
        <div class="relative rounded-sm overflow-hidden shadow-xl">
          {image ? (
            <Image
              src={image}
              alt={imageAlt}
              widths={[400, 800, 1200, 1600]}
              sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 800px"
              loading={loading}
              decoding={loading === 'eager' ? 'sync' : 'async'}
              fetchpriority={loading === 'eager' ? 'high' : 'auto'}
              class={`w-full h-64 sm:h-80 lg:h-96 object-cover ${imagePositionClass}`}
            />
          ) : (
            <div
              class="w-full h-64 sm:h-80 lg:h-96 bg-brand-mud/50 flex items-center justify-center"
              aria-label="Image not available"
            >
              <span class="text-brand-cream/60 font-display text-lg">
                Image Coming Soon
              </span>
            </div>
          )}

          {/* Aside Slot - Overlays on image */}
          {hasAsideSlot && (
            <div class="absolute bottom-4 left-4 right-4">
              <slot name="aside" />
            </div>
          )}
        </div>
      </div>

      <!-- Content Column -->
      <div class="order-2 lg:order-1 lg:col-span-7">
        {/* CRITICAL-3: Badge container with role="group" for assistive technology */}
        <div
          class="flex flex-wrap gap-3 mb-6 adventure-hero__animated hero-stagger-0"
          role="group"
          aria-label="Adventure information badges"
        >
          <AdventureHeroBadge
            type="difficulty"
            value={difficultyLabel}
            difficulty={difficulty}
          />
          <AdventureHeroBadge
            type="season"
            value={season}
          />
          {driveTime && (
            <AdventureHeroBadge
              type="drive-time"
              value={driveTime}
            />
          )}
          {hasBadgeExtraSlot && (
            <slot name="badge-extra" />
          )}
        </div>

        <!-- Title -->
        <h1
          id={heroId}
          class="font-display font-black text-3xl sm:text-4xl lg:text-5xl xl:text-6xl text-white leading-tight mb-6 adventure-hero__animated hero-stagger-1 adventure-hero__title--truncate"
        >
          {title}
        </h1>

        <!-- Description -->
        <p class="font-body text-lg sm:text-xl text-brand-cream/90 leading-relaxed max-w-prose mb-6 adventure-hero__animated hero-stagger-2">
          {description}
        </p>

        <!-- Default Slot - Additional content below description -->
        {hasDefaultSlot && (
          <div class="mb-6 adventure-hero__animated hero-stagger-3">
            <slot />
          </div>
        )}

        <!-- CTA Slot -->
        {hasCtaSlot && (
          <div class="flex flex-wrap gap-4 adventure-hero__cta adventure-hero__animated hero-stagger-3">
            <slot name="cta" />
          </div>
        )}

        <!-- Meta Information -->
        {(publishedDate || updatedDate || coordinates) && (
          <div class="mt-8 pt-6 border-t border-brand-cream/20">
            <dl class="flex flex-wrap gap-x-6 gap-y-2 text-sm text-brand-cream/70 font-body">
              {publishedDate && (
                <div class="flex gap-2">
                  <dt class="sr-only">Published</dt>
                  <dd>
                    <time datetime={publishedDate}>
                      Published: {formatAdventureDate(publishedDate)}
                    </time>
                  </dd>
                </div>
              )}
              {updatedDate && (
                <div class="flex gap-2">
                  <dt class="sr-only">Updated</dt>
                  <dd>
                    <time datetime={updatedDate}>
                      Updated: {formatAdventureDate(updatedDate)}
                    </time>
                  </dd>
                </div>
              )}
              {coordinates && (
                <div class="flex gap-2">
                  <dt class="sr-only">Coordinates</dt>
                  <dd>
                    {/* CRITICAL-2: External link with "(opens in new tab)" accessibility */}
                    <a
                      href={`https://maps.google.com/?q=${coordinates.lat},${coordinates.lng}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="adventure-hero__maps-link inline-flex items-center gap-1 hover:text-brand-cream underline underline-offset-2"
                      aria-describedby={`${componentId}-external-link-notice`}
                    >
                      {coordinates.lat.toFixed(4)}, {coordinates.lng.toFixed(4)}
                      <span class="sr-only"> (opens in new tab)</span>
                      <svg aria-hidden="true" class="w-3 h-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                      </svg>
                    </a>
                  </dd>
                </div>
              )}
            </dl>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Schema Extra Slot - For custom JSON-LD injection -->
  {hasSchemaExtraSlot && (
    <slot name="schema-extra" />
  )}

  {/* Hidden notice for external link accessibility (aria-describedby target) */}
  <span id={`${componentId}-external-link-notice`} class="sr-only">
    External link opens in a new browser tab
  </span>
</section>
