<header class="sticky top-0 z-50 bg-brand-brown text-white shadow-lg border-b-4 border-sign-green">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo / Brand Name -->
    <a href="/" class="group flex flex-col md:block">
      <span class="text-2xl md:text-3xl font-display font-bold text-white tracking-wide uppercase group-hover:text-brand-cream transition-colors">
        WV Wild Outdoors
      </span>
      <span class="text-brand-orange font-hand text-lg md:text-xl md:ml-2 -mt-1 transform -rotate-2 inline-block">
        Since 2008
      </span>
    </a>

    <!-- Desktop Nav & Badges -->
    <div class="hidden md:flex items-center space-x-6">
       <!-- Trust Badges -->
       <div class="flex items-center space-x-3 border-r border-brand-cream/20 pr-6 mr-2">
         <img src="/badges/ffl.svg" alt="Federal Firearms License Dealer" width="40" height="32" class="h-8 opacity-80 hover:opacity-100 transition-opacity" />
         <img src="/badges/wvdnr.svg" alt="WV DNR License Agent" width="32" height="32" class="h-8 opacity-80 hover:opacity-100 transition-opacity" />
       </div>

      <nav class="flex space-x-6 items-center">
        <a href="#products" class="text-brand-cream font-medium hover:text-white transition-colors">Products</a>
        <a href="#services" class="text-brand-cream font-medium hover:text-white transition-colors">Services</a>
        <a href="/story" class="text-brand-cream font-medium hover:text-white transition-colors">Our Story</a>
        <a href="#contact" class="px-4 py-2 bg-sign-green text-white font-bold rounded hover:bg-green-800 transition-colors">
          Call Us
        </a>
      </nav>
    </div>

    <!-- Mobile Menu Button (Hamburger placeholder) -->
    <button class="md:hidden text-white focus:outline-none" aria-label="Open menu">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</header>
