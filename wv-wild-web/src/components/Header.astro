<header class="sticky top-0 z-50 bg-brand-brown text-white shadow-lg border-b-4 border-sign-green">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo / Brand Name -->
    <a href="/" class="text-2xl md:text-3xl font-display font-bold text-white tracking-wide uppercase hover:text-brand-cream transition-colors">
      WV Wild Outdoors
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex space-x-6">
      <a href="#products" class="text-brand-cream font-medium hover:text-white transition-colors">Products</a>
      <a href="#services" class="text-brand-cream font-medium hover:text-white transition-colors">Services</a>
      <a href="/story" class="text-brand-cream font-medium hover:text-white transition-colors">Our Story</a>
      <a href="#contact" class="px-4 py-2 bg-sign-green text-white font-bold rounded hover:bg-green-800 transition-colors">
        Call Us
      </a>
    </nav>

    <!-- Mobile Menu Button (Hamburger placeholder) -->
    <button class="md:hidden text-white focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</header>
