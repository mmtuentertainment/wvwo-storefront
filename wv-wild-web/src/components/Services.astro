<section id="services" class="py-16 bg-brand-cream border-t-8 border-brand-brown">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row gap-8 items-stretch font-display">
      
      <!-- FFL Transfers -->
      <div class="flex-1 bg-white p-8 rounded-sm shadow-md border-l-8 border-brand-brown">
        <h3 class="text-2xl font-bold mb-2">FFL Transfers</h3>
        <p class="text-4xl font-black text-sign-green mb-4">$25</p>
        <p class="font-body text-brand-mud mb-4">
          Buy online? Ship to us. We handle the paperwork legally and quickly.
        </p>
        <p class="text-sm font-bold text-brand-brown uppercase tracking-wide">
          Type 02 FFL / SOT
        </p>
      </div>

      <!-- Scope Mounting -->
      <div class="flex-1 bg-white p-8 rounded-sm shadow-md border-l-8 border-brand-brown">
        <h3 class="text-2xl font-bold mb-2">Scope Mounting</h3>
        <p class="text-4xl font-black text-sign-green mb-4">$20</p>
        <p class="font-body text-brand-mud mb-4">
          Don't trust a laser bore sight alone. We mount it level, torque it right, and get you on paper.
        </p>
         <p class="text-sm font-bold text-brand-brown uppercase tracking-wide">
          Free with Rifle Purchase
        </p>
      </div>

      <!-- Licenses -->
      <div class="flex-1 bg-white p-8 rounded-sm shadow-md border-l-8 border-brand-brown">
        <h3 class="text-2xl font-bold mb-2">WVDNR Agent</h3>
        <p class="text-4xl font-black text-sign-green mb-4">Official</p>
        <p class="font-body text-brand-mud mb-4">
          Get your Hunting & Fishing licenses here. We print them on-site.
        </p>
         <p class="text-sm font-bold text-brand-brown uppercase tracking-wide">
          Lifetime Licenses Available
        </p>
      </div>

    </div>
  </div>
</section>
