---
// Testimonials Component
// Customer reviews to build trust

const testimonials = [
  {
    name: "Local Hunter",
    location: "Birch River",
    text: "Best place around for ammo and local knowledge. Kim always knows what's in stock and Bryan can tell you where the deer are moving.",
    stars: 5
  },
  {
    name: "Weekend Angler",
    location: "Sutton",
    text: "Stopped in for fishing supplies on my way to the lake. Fair prices and they actually had what I needed. Will be back.",
    stars: 5
  },
  {
    name: "First-Time Buyer",
    location: "Nicholas County",
    text: "Bought my first rifle here. They took the time to explain everything and made sure I left with what I actually needed. No pressure sales.",
    stars: 5
  }
];
---

<section class="py-16 bg-stone-50" id="testimonials">
  <div class="container mx-auto px-4">

    <!-- Section Header -->
    <div class="text-center mb-12">
      <span class="font-hand text-brand-orange text-xl -rotate-2 inline-block mb-2">
        What Folks Are Saying
      </span>
      <h2 class="font-display font-bold text-2xl md:text-3xl text-brand-brown">
        From Our Neighbors
      </h2>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-lg p-6 shadow-sm border border-stone-100">

          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {Array.from({ length: testimonial.stars }).map(() => (
              <svg class="w-5 h-5 text-brand-orange" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-stone-600 mb-4 leading-relaxed">
            "{testimonial.text}"
          </blockquote>

          <!-- Attribution -->
          <div class="text-sm">
            <p class="font-bold text-brand-brown">{testimonial.name}</p>
            <p class="text-stone-500">{testimonial.location}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Google Review CTA -->
    <div class="text-center mt-10">
      <p class="text-stone-500 text-sm">
        Had a good experience? We'd love to hear from you.
      </p>
    </div>

  </div>
</section>
