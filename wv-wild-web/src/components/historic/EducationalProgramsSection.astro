---
import type { HistoricTemplateProps } from '../../types/templates/historic';

interface Props {
  education: HistoricTemplateProps['education'];
}

const { education } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-display font-black text-center mb-12 text-brand-brown">
      Educational Programs
    </h2>

    {education.programs && education.programs.length > 0 && (
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        {education.programs.map((program) => (
          <div class="bg-white border-l-4 border-heritage-burgundy p-6 shadow-md">
            {program.type && (
              <span class="inline-block bg-heritage-gold text-brand-brown text-xs font-bold px-3 py-1 rounded-sm uppercase tracking-wide mb-3">
                {program.type}
              </span>
            )}

            <h3 class="text-xl font-bold mb-2 text-brand-brown">
              {program.name}
            </h3>

            {program.audience && (
              <div class="text-sm text-brand-mud mb-3">
                For: {program.audience}
              </div>
            )}

            <p class="text-brand-mud mb-4">
              {program.description}
            </p>

            <div class="flex items-center justify-between text-sm text-brand-mud mt-4 pt-4 border-t border-coal-gray/20">
              {program.duration && (
                <span><span aria-hidden="true" role="img" aria-label="Duration">⏱️</span> {program.duration}</span>
              )}
              {program.cost && (
                <span class="font-bold">{program.cost}</span>
              )}
            </div>

            {program.contactForInquiry && (
              <a
                href={`mailto:${program.contactForInquiry}`}
                class="inline-block mt-4 text-sign-green hover:underline text-sm font-bold"
              >
                Inquire →
              </a>
            )}
          </div>
        ))}
      </div>
    )}

    {education.resources && education.resources.length > 0 && (
      <div class="mt-16">
        <h3 class="text-3xl font-display font-bold text-center mb-8 text-brand-brown">
          Educational Resources
        </h3>
        <div class="grid md:grid-cols-3 gap-6">
          {education.resources.map((resource) => (
            <div class="bg-white border-l-4 border-brand-brown p-6">
              <div class="text-xs uppercase tracking-wide text-stone-gray mb-2">
                {resource.type}
              </div>
              <h4 class="text-lg font-bold mb-3 text-brand-brown">
                {resource.title}
              </h4>
              {resource.downloadUrl && (
                <a
                  href={resource.downloadUrl}
                  class="inline-block text-sign-green hover:underline text-sm font-bold"
                  download
                >
                  Download →
                </a>
              )}
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
