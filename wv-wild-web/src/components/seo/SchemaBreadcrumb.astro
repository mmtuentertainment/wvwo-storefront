---
/**
 * SchemaBreadcrumb - Outputs BreadcrumbList JSON-LD schema
 *
 * Usage:
 * <SchemaBreadcrumb items={[
 *   { name: 'Home', url: '/' },
 *   { name: 'Hunt Near Us', url: '/near/' },
 *   { name: 'Elk River WMA', url: '/near/elk-river/' }
 * ]} />
 */

import type { BreadcrumbItem } from '../../types/breadcrumb';

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
// Uses Astro.site from config with fallback
const BASE_URL = Astro.site?.href.replace(/\/$/, '') || 'https://wvwildoutdoors.pages.dev';

const schema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url.startsWith('http') ? item.url : `${BASE_URL}${item.url}`
  }))
};
---

<script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />
